<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.startup.dao.InboxDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`useruid`, `newsuid`, `isread`, `type`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">inbox</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="whereuseruid">where useruid = #{useruid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{useruid},#{newsuid},#{isread},#{type},#{status}</sql>
    <sql id="setuseruid">`useruid` = #{useruid}</sql>
    <sql id="setnewsuid">`newsuid` = #{newsuid}</sql>
    <sql id="setisread">`isread` = #{isread}</sql>
    <sql id="settype">`type` = #{type}</sql>
    <sql id="setstatus">inbox.`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setuseruid"/>,
            <include refid="setnewsuid"/>,
            <include refid="setisread"/>,
            <include refid="settype"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by inbox.createtime</sql>

    <select id="get" parameterType="string" resultType="inbox">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="inbox">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="newsuid != null">
                and <include refid="setnewsuid"/>
            </if>
            <if test="isread != null">
                and <include refid="setisread"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="newsuid != null">
                and <include refid="setnewsuid"/>
            </if>
            <if test="isread != null">
                and <include refid="setisread"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="inbox">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="newsuid != null">
                and <include refid="setnewsuid"/>
            </if>
            <if test="isread != null">
                and <include refid="setisread"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="inbox">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="inbox">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="newsuid != null">
                <include refid="setnewsuid"/>,
            </if>
            <if test="isread != null">
                <include refid="setisread"/>,
            </if>
            <if test="type != null">
                <include refid="settype"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>
    
    <update id="updateByUseruid" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="newsuid != null">
                <include refid="setnewsuid"/>,
            </if>
            <if test="isread != null">
                <include refid="setisread"/>,
            </if>
            <if test="type != null">
                <include refid="settype"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereuseruid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

