<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.startup.dao.StatisticsDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`score`, `ruleruid`, `data`, `loginip`, `useruid`, `name`, `nickname`, `gender`, `email`, `phone`, `address`, `advice`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">statistics</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{score},#{ruleruid},#{data},#{loginip},#{useruid},#{name},#{nickname},#{gender},#{email},#{phone},#{address},#{advice},#{status}</sql>
    <sql id="setscore">`score` = #{score}</sql>
    <sql id="setruleruid">`ruleruid` = #{ruleruid}</sql>
    <sql id="setdata">`data` = #{data}</sql>
    <sql id="setloginip">`loginip` = #{loginip}</sql>
    <sql id="setuseruid">`useruid` = #{useruid}</sql>
    <sql id="setname">`name` = #{name}</sql>
    <sql id="setname_lk">`name` like CONCAT('%', #{name_lk}, '%')</sql>
    <sql id="setnickname">`nickname` = #{nickname}</sql>
    <sql id="setgender">`gender` = #{gender}</sql>
    <sql id="setgender_ne">`gender` is not null</sql>
    <sql id="setemail">`email` = #{email}</sql>
    <sql id="setemail_lk">`email` like CONCAT('%', #{email_lk}, '%')</sql>
    <sql id="setphone">`phone` = #{phone}</sql>
    <sql id="setphone_lk">`phone` like CONCAT('%', #{phone_lk}, '%')</sql>
    <sql id="setaddress">`address` = #{address}</sql>
    <sql id="setadvice">`advice` = #{advice}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setscore"/>,
            <include refid="setruleruid"/>,
            <include refid="setdata"/>,
            <include refid="setloginip"/>,
            <include refid="setuseruid"/>,
            <include refid="setname"/>,
            <include refid="setnickname"/>,
            <include refid="setgender"/>,
            <include refid="setemail"/>,
            <include refid="setphone"/>,
            <include refid="setaddress"/>,
            <include refid="setadvice"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="Statistics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="Statistics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="score != null">
                and <include refid="setscore"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="nickname != null">
                and <include refid="setnickname"/>
            </if>
            <if test="gender != null">
                and <include refid="setgender"/>
            </if>
            <if test="email != null">
                and <include refid="setemail"/>
            </if>
            <if test="phone != null">
                and <include refid="setphone"/>
            </if>
            <if test="address != null">
                and <include refid="setaddress"/>
            </if>
            <if test="advice != null">
                and <include refid="setadvice"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="score != null">
                and <include refid="setscore"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="name_lk != null">
                and <include refid="setname_lk"/>
            </if>
            <if test="nickname != null">
                and <include refid="setnickname"/>
            </if>
            <if test="gender != null">
                and <include refid="setgender"/>
            </if>
            <if test="email != null">
                and <include refid="setemail"/>
            </if>
            <if test="email_lk != null">
                and <include refid="setemail_lk"/>
            </if>
            <if test="phone != null">
                and <include refid="setphone"/>
            </if>
            <if test="address != null">
                and <include refid="setaddress"/>
            </if>
            <if test="phone_lk != null">
                and <include refid="setphone_lk"/>
            </if>
            <if test="advice != null">
                and <include refid="setadvice"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="Statistics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="score != null">
                and <include refid="setscore"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="name_lk != null">
                and <include refid="setname_lk"/>
            </if>
            <if test="nickname != null">
                and <include refid="setnickname"/>
            </if>
            <if test="gender != null">
                and <include refid="setgender"/>
            </if>
            <if test="gender_ne != null">
                and <include refid="setgender_ne"/>
            </if>
            <if test="email != null">
                and <include refid="setemail"/>
            </if>
            <if test="email_lk != null">
                and <include refid="setemail_lk"/>
            </if>
            <if test="phone != null">
                and <include refid="setphone"/>
            </if>
            <if test="phone_lk != null">
                and <include refid="setphone_lk"/>
            </if>
            <if test="address != null">
                and <include refid="setaddress"/>
            </if>
            <if test="advice != null">
                and <include refid="setadvice"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="Statistics">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="Statistics">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="score != null">
                <include refid="setscore"/>,
            </if>
            <if test="ruleruid != null">
                <include refid="setruleruid"/>,
            </if>
            <if test="data != null">
                <include refid="setdata"/>,
            </if>
            <if test="loginip != null">
                <include refid="setloginip"/>,
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>,
            </if>
            <if test="name != null">
                <include refid="setname"/>,
            </if>
            <if test="nickname != null">
                <include refid="setnickname"/>,
            </if>
            <if test="gender != null">
                <include refid="setgender"/>,
            </if>
            <if test="email != null">
                <include refid="setemail"/>,
            </if>
            <if test="phone != null">
                <include refid="setphone"/>,
            </if>
            <if test="address != null">
                <include refid="setaddress"/>,
            </if>
            <if test="advice != null">
                <include refid="setadvice"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

	<delete id="deleteByMap" parameterType="hashMap">
		delete from
		<include refid="table"/>
		<where>
            <if test="score != null">
                and <include refid="setscore"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="nickname != null">
                and <include refid="setnickname"/>
            </if>
            <if test="gender != null">
                and <include refid="setgender"/>
            </if>
            <if test="email != null">
                and <include refid="setemail"/>
            </if>
            <if test="phone != null">
                and <include refid="setphone"/>
            </if>
            <if test="address != null">
                and <include refid="setaddress"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
			<if test="uids != null">
				and uid in 
				<foreach item="item" index="index" collection="uids" open="(" separator="," close=")">
                 	 #{item}
            	</foreach>
			</if>
		</where>
	</delete>

	<select id="getCountByRuler" parameterType="hashMap" resultType="hashMap">
        select
        	`ruler`.`name`, count(`ruleruid`) as count
        from
        <include refid="table"/>
        	join `ruler` on `ruleruid` = `ruler`.`uid`
        <where>
            <if test="status != null">
                and `statistics`.`status` = #{status}
            </if>
        </where>
        group by `ruler`.`name` 
        limit #{startIndex}, 1
    </select>
</mapper>

