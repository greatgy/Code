<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.manager.dao.StudentDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns"><include refid="basecolumns"/>, `sn`, `majors`, `workdaytime`, `saturdaytime`, `sundaytime`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">student</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{sn},#{majors},#{workdaytime},#{saturdaytime},#{sundaytime},#{status}</sql>
    <sql id="setsn">`sn` = #{sn}</sql>
    <sql id="setuid">uid = #{uid}</sql>
    <sql id="setmajors">`majors` = #{majors}</sql>
    <sql id="setworkdaytime">`workdaytime` = #{workdaytime}</sql>
    <sql id="setsaturdaytime">`saturdaytime` = #{saturdaytime}</sql>
    <sql id="setsundaytime">`sundaytime` = #{sundaytime}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setsn"/>,
            <include refid="setmajors"/>,
            <include refid="setworkdaytime"/>,
            <include refid="setsaturdaytime"/>,
            <include refid="setsundaytime"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="student">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="student">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="uid != null">
                and <include refid="setuid"/>
            </if>         
            <if test="sn != null">
                and <include refid="setsn"/>
            </if>
            <if test="majors != null">
                and <include refid="setmajors"/>
            </if>
            <if test="workdaytime != null">
                and <include refid="setworkdaytime"/>
            </if>
            <if test="saturdaytime != null">
                and <include refid="setsaturdaytime"/>
            </if>
            <if test="sundaytime != null">
                and <include refid="setsundaytime"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="sn != null">
                and <include refid="setsn"/>
            </if>
            <if test="majors != null">
                and <include refid="setmajors"/>
            </if>
            <if test="workdaytime != null">
                and <include refid="setworkdaytime"/>
            </if>
            <if test="saturdaytime != null">
                and <include refid="setsaturdaytime"/>
            </if>
            <if test="sundaytime != null">
                and <include refid="setsundaytime"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="student">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="sn != null">
                and <include refid="setsn"/>
            </if>
            <if test="majors != null">
                and <include refid="setmajors"/>
            </if>
            <if test="workdaytime != null">
                and <include refid="setworkdaytime"/>
            </if>
            <if test="saturdaytime != null">
                and <include refid="setsaturdaytime"/>
            </if>
            <if test="sundaytime != null">
                and <include refid="setsundaytime"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="student">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="student">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="sn != null">
                <include refid="setsn"/>,
            </if>
            <if test="majors != null">
                <include refid="setmajors"/>,
            </if>
            <if test="workdaytime != null">
                <include refid="setworkdaytime"/>,
            </if>
            <if test="saturdaytime != null">
                <include refid="setsaturdaytime"/>,
            </if>
            <if test="sundaytime != null">
                <include refid="setsundaytime"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

