<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.manager.dao.MyVideoDao">
	<sql id="videotable">video</sql>
	<sql id="videocolumns">video.`uid`, video.`sn`, video.`videouid`, video.`name`, video.`code`, video.`price`, video.`thumblittle`, video.`thumb`, video.`thumbbig`, video.`original`, video.`refuid`, video.`playcount`, video.`endcount`, video.`width`, video.`height`, video.`summary`, video.`title`, video.`desc`, video.`fileurl`, video.`sortorder`, video.`channelfrom`, video.`major`, video.`status` </sql>
	<sql id="videoon">on myvideo.videouid = video.uid</sql>
	<sql id="setmajor">`major` = #{major}</sql>
	<sql id="setchannelfrom">`channelfrom` = #{channelfrom}</sql>
	
    <sql id="basecolumns">`myvideo`.`uid`, `myvideo`.`createtime` </sql>
    <sql id="othercolumns"><include refid="basecolumns"/>, `myvideo`.`useruid`, `myvideo`.`videouid`, `myvideo`.`expiretime`, `myvideo`.`status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `myvideo`.`updatetime`</sql>
    <sql id="table">myvideo</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{useruid},#{videouid},#{expiretime},#{status}</sql>
    <sql id="setuseruid">`useruid` = #{useruid}</sql>
    <sql id="setvideouid">`videouid` = #{videouid}</sql>
    <sql id="setuid">uid = #{uid}</sql>
    <sql id="setexpiretime">`expiretime` = #{expiretime}</sql>
    <sql id="setstatus">`myvideo`.`status` = #{status}</sql>
    <sql id="setexpiretime_insevenday">`expiretime` &gt; now() and `expiretime` &lt;= adddate(now(), #{expiretime_insevenday})</sql>
    <sql id="setexpiretime_inthreeday">`expiretime` &gt; adddate(now(), #{expiretime_inthreeday}) and subdate(expiretime,1) &lt;= adddate(now(), #{expiretime_inthreeday})</sql>
    <sql id="setexpiretime_lt">`expiretime` &lt; now()</sql>
    <sql id="allsets">set
            <include refid="setuseruid"/>,
            <include refid="setvideouid"/>,
            <include refid="setexpiretime"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by myvideo.createtime</sql>

    <select id="get" parameterType="string" resultType="myvideo">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="myvideo">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="uid != null">
                and <include refid="setuid"/>
            </if>         
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="videouid != null">
                and <include refid="setvideouid"/>
            </if>
            <if test="expiretime != null">
                and <include refid="setexpiretime"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="videouid != null">
                and <include refid="setvideouid"/>
            </if>
            <if test="expiretime != null">
                and <include refid="setexpiretime"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="myvideo">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="videouid != null">
                and <include refid="setvideouid"/>
            </if>
            <if test="expiretime != null">
                and <include refid="setexpiretime"/>
            </if>
            <if test="expiretime_inthreeday != null">
        		and <include refid="setexpiretime_inthreeday"/>
        	</if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>
    
    <select id="getSearchList" parameterType="hashMap" resultType="myvideo">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        left join 
        <include refid="videotable"/>
        <include refid="videoon"/>
        <where>
        	<if test="channelfrom != null">
        		and <include refid="setchannelfrom"/>
        	</if>
        	<if test="major != null">
        		and <include refid="setmajor"/>
        	</if>
        	<if test="expiretime_insevenday != null">
        		and <include refid="setexpiretime_insevenday"/>
        	</if>
        	<if test="expiretime_lt != null">
                and <include refid="setexpiretime_lt"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="videouid != null">
                and <include refid="setvideouid"/>
            </if>
            <if test="expiretime != null">
                and <include refid="setexpiretime"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="myvideo">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="myvideo">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="videouid != null">
                <include refid="setvideouid"/>,
            </if>
            <if test="expiretime != null">
                <include refid="setexpiretime"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

