<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.enterpriser.dao.ForumDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`oid`, `cid`, `adminuid`, `authoruid`, `author`, `content`, `title`, `isrecommend`, `istop`,`toptime`, `cataloguename`, `summary`, `keywords`, `status`, `activetime` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">forum</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{oid},#{cid},#{adminuid},#{authoruid},#{author},#{content},#{title},#{isrecommend},#{istop},#{toptime},#{cataloguename},#{summary},#{keywords},#{status},#{activetime}</sql>
    <sql id="setoid">`oid` = #{oid}</sql>
    <sql id="setcid">`cid` = #{cid}</sql>
    <sql id="setuid">`uid` = #{uid}</sql>
    <sql id="wherecid">cid &amp; #{cid}</sql>
    <sql id="setadminuid">`adminuid` = #{adminuid}</sql>
    <sql id="setauthoruid">`authoruid` = #{authoruid}</sql>
    <sql id="setauthor">`author` = #{author}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="settitle">`title` = #{title}</sql>
    <sql id="setisrecommend">`isrecommend` = #{isrecommend}</sql>
    <sql id="setistop">`istop` = #{istop}</sql>
    <sql id="settoptime">`toptime` = #{toptime}</sql>
    <sql id="setcataloguename">`cataloguename` = #{cataloguename}</sql>
    <sql id="setsummary">`summary` = #{summary}</sql>
    <sql id="setkeywords">`keywords` = #{keywords}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="setactivetime">`activetime` = #{activetime}</sql>
    <sql id="setinitstatus">`status` = #{initstatus}</sql>
	<sql id="setkeywords_lk">( author like CONCAT('%',#{keywords_lk},'%') or title like CONCAT('%',#{keywords_lk},'%') or origin like
		CONCAT('%',#{keywords_lk},'%')or summary like CONCAT('%',#{keywords_lk},'%') )</sql>
    <sql id="allsets">set
            <include refid="setoid"/>,
            <include refid="setcid"/>,
            <include refid="setadminuid"/>,
            <include refid="setauthoruid"/>,
            <include refid="setauthor"/>,
            <include refid="setcontent"/>,
            <include refid="settitle"/>,
            <include refid="setisrecommend"/>,
            <include refid="setistop"/>,
            <include refid="settoptime"/>,
            <include refid="setsummary"/>,
            <include refid="setcataloguename"/>,
            <include refid="setkeywords"/>,
            <include refid="setstatus"/>,
            <include refid="setactivetime"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="forum">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="forum">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="cid != null">
                and <include refid="setcid"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="authoruid != null">
                and <include refid="setauthoruid"/>
            </if>
            <if test="author != null">
                and <include refid="setauthor"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="isrecommend != null">
                and <include refid="setisrecommend"/>
            </if>
            <if test="istop != null">
                and <include refid="setistop"/>
            </if>
            <if test="toptime != null">
                and <include refid="settoptime"/>
            </if>
            <if test="summary != null">
                and <include refid="setsummary"/>
            </if>
            <if test="cataloguename != null">
                and <include refid="setcataloguename"/>
            </if>
            <if test="keywords != null">
                and <include refid="setkeywords"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="activetime != null">
                and <include refid="setactivetime"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="cid != null">
                and <include refid="setcid"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="authoruid != null">
                and <include refid="setauthoruid"/>
            </if>
            <if test="author != null">
                and <include refid="setauthor"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="isrecommend != null">
                and <include refid="setisrecommend"/>
            </if>
              <if test="istop != null">
                and <include refid="setistop"/>
            </if>
            <if test="toptime != null">
                and <include refid="settoptime"/>
            </if>
            <if test="summary != null">
                and <include refid="setsummary"/>
            </if>
            <if test="cataloguename != null">
                and <include refid="setcataloguename"/>
            </if>
            <if test="keywords != null">
                and <include refid="setkeywords"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="activetime != null">
                and <include refid="setactivetime"/>
            </if>
            <if test="keywords_lk != null">
				and
				<include refid="setkeywords_lk" />
			</if>
			<if test="statuslist != null">
				and status in
				<foreach item="item" index="index" collection="statuslist" open="(" separator="," close=")">
					#{item}
				</foreach>
			</if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="forum">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="cid != null">
                and <include refid="setcid"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="authoruid != null">
                and <include refid="setauthoruid"/>
            </if>
            <if test="author != null">
                and <include refid="setauthor"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="isrecommend != null">
                and <include refid="setisrecommend"/>
            </if>
              <if test="istop != null">
                and <include refid="setistop"/>
            </if>
            <if test="toptime != null">
                and <include refid="settoptime"/>
            </if>
            <if test="summary != null">
                and <include refid="setsummary"/>
            </if>
            <if test="cataloguename != null">
                and <include refid="setcataloguename"/>
            </if>
            <if test="keywords != null">
                and <include refid="setkeywords"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="activetime != null">
                and <include refid="setactivetime"/>
            </if>
            <if test="initstatus != null">
				and
				<include refid="setinitstatus" />
			</if>
            <if test="keywords_lk != null">
				and
				<include refid="setkeywords_lk" />
			</if>
			<if test="refuid != null">
				and uid in
				<foreach item="item" index="index" collection="refuid" open="(" separator="," close=")">
					#{item}
				</foreach>
			</if>
			<if test="statuslist != null">
				and status in
				<foreach item="item" index="index" collection="statuslist" open="(" separator="," close=")">
					#{item}
				</foreach>
			</if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="forum">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="forum">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="oid != null">
                <include refid="setoid"/>,
            </if>
            <if test="cid != null">
                <include refid="setcid"/>,
            </if>
            <if test="adminuid != null">
                <include refid="setadminuid"/>,
            </if>
            <if test="authoruid != null">
                <include refid="setauthoruid"/>,
            </if>
            <if test="author != null">
                <include refid="setauthor"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="title != null">
                <include refid="settitle"/>,
            </if>
            <if test="isrecommend != null">
                <include refid="setisrecommend"/>,
            </if>
              <if test="istop != null">
                 <include refid="setistop"/>,
            </if>
            <if test="toptime != null">
                 <include refid="settoptime"/>,
            </if>
            <if test="summary != null">
                <include refid="setsummary"/>,
            </if>
            <if test="cataloguename != null">
                <include refid="setcataloguename"/>,
            </if>
            <if test="keywords != null">
                <include refid="setkeywords"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>,
            </if>
            <if test="activetime != null">
                <include refid="setactivetime"/>
            </if>
        </set>
        <where>
			<if test="uid != null">
				<include refid="setuid" />
			</if>
			<if test="initstatus != null">
				and
				<include refid="setinitstatus" />
			</if>
		</where>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

