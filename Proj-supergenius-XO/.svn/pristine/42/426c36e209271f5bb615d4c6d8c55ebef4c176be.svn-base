<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.life.dao.ProblemDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`oid`, `cid`, `cataloguename`, `adminuid`, `useruid`, `username`, `content`, `title`, `place`, `data`, `state`, `istop`, `toptime`, `ismember`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">problem</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{oid},#{cid},#{cataloguename},#{adminuid},#{useruid},#{username},#{content},#{title},#{place},#{data},#{state},#{istop},#{toptime},#{ismember},#{status}</sql>
    <sql id="setoid">`oid` = #{oid}</sql>
    <sql id="setcid">`cid` = #{cid}</sql>
    <sql id="setcataloguename">`cataloguename` = #{cataloguename}</sql>
    <sql id="setadminuid">`adminuid` = #{adminuid}</sql>
    <sql id="setuseruid">`useruid` = #{useruid}</sql>
    <sql id="setusername">`username` = #{username}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="settitle">`title` = #{title}</sql>
    <sql id="setplace">`place` = #{place}</sql>
    <sql id="setdata">`data` = #{data}</sql>
    <sql id="setstate">`state` = #{state}</sql>
    <sql id="setistop">`istop` = #{istop}</sql>
    <sql id="settoptime">`toptime` = #{toptime}</sql>
    <sql id="setismember">`ismember` = #{ismember}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="setkeywords_lk">(title like CONCAT('%',#{keywords_lk},'%') or content like CONCAT('%',#{keywords_lk},'%') )</sql>
    <sql id="allsets">set
            <include refid="setoid"/>,
            <include refid="setcid"/>,
            <include refid="setcataloguename"/>,
            <include refid="setadminuid"/>,
            <include refid="setuseruid"/>,
            <include refid="setusername"/>,
            <include refid="setcontent"/>,
            <include refid="settitle"/>,
            <include refid="setplace"/>,
            <include refid="setdata"/>,
            <include refid="setstate"/>,
            <include refid="setistop"/>,
            <include refid="settoptime"/>,
            <include refid="setismember"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="problem">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="problem">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="cid != null">
                and <include refid="setcid"/>
            </if>
            <if test="cataloguename != null">
                and <include refid="setcataloguename"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="username != null">
                and <include refid="setusername"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="place != null">
                and <include refid="setplace"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="state != null">
                and <include refid="setstate"/>
            </if>
            <if test="istop != null">
                and <include refid="setistop"/>
            </if>
            <if test="toptime != null">
                and <include refid="settoptime"/>
            </if>
            <if test="ismember != null">
                and <include refid="setismember"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="cid != null">
                and <include refid="setcid"/>
            </if>
            <if test="cataloguename != null">
                and <include refid="setcataloguename"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="username != null">
                and <include refid="setusername"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="place != null">
                and <include refid="setplace"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="state != null">
                and <include refid="setstate"/>
            </if>
            <if test="istop != null">
                and <include refid="setistop"/>
            </if>
            <if test="toptime != null">
                and <include refid="settoptime"/>
            </if>
            <if test="ismember != null">
                and <include refid="setismember"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="statuslist != null">
				and status in 
				<foreach item="item" index="index" collection="statuslist" open="(" separator="," close=")">
                 	 #{item}
            	</foreach>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="problem">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="cid != null">
                and <include refid="setcid"/>
            </if>
            <if test="cataloguename != null">
                and <include refid="setcataloguename"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="username != null">
                and <include refid="setusername"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="keywords_lk != null">
				and <include refid="setkeywords_lk"/>
			</if>
            <if test="place != null">
                and <include refid="setplace"/>
            </if>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="state != null">
                and <include refid="setstate"/>
            </if>
            <if test="istop != null">
                and <include refid="setistop"/>
            </if>
            <if test="toptime != null">
                and <include refid="settoptime"/>
            </if>
            <if test="ismember != null">
                and <include refid="setismember"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="statuslist != null">
				and status in 
				<foreach item="item" index="index" collection="statuslist" open="(" separator="," close=")">
                 	 #{item}
            	</foreach>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="problem">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="problem">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="oid != null">
                <include refid="setoid"/>,
            </if>
            <if test="cid != null">
                <include refid="setcid"/>,
            </if>
            <if test="cataloguename != null">
                <include refid="setcataloguename"/>,
            </if>
            <if test="adminuid != null">
                <include refid="setadminuid"/>,
            </if>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="username != null">
                <include refid="setusername"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="title != null">
                <include refid="settitle"/>,
            </if>
            <if test="place != null">
                <include refid="setplace"/>,
            </if>
            <if test="data != null">
                <include refid="setdata"/>,
            </if>
            <if test="state != null">
                <include refid="setstate"/>,
            </if>
            <if test="istop != null">
                <include refid="setistop"/>,
            </if>
            <if test="toptime != null">
                <include refid="settoptime"/>,
            </if>
            <if test="ismember != null">
                <include refid="setismember"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

