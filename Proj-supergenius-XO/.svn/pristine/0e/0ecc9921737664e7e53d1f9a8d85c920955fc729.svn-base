<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.finance.dao.CollectDetailDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns"><include refid="basecolumns"/>, `useruid`, `type`, `finance`, `refuid`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">collectdetail</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{useruid},#{type},#{finance},#{refuid},#{status}</sql>
    <sql id="setuseruid">useruid = #{useruid}</sql>
    <sql id="settype">type = #{type}</sql>
    <sql id="setfinance">finance = #{finance}</sql>
    <sql id="setrefuid">refuid = #{refuid}</sql>
    <sql id="setstatus">status = #{status}</sql>
    <sql id="allsets">set
            <include refid="setuseruid"/>,
            <include refid="settype"/>,
            <include refid="setfinance"/>,
            <include refid="setrefuid"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="collectdetail">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="collectdetail">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="finance != null">
                and <include refid="setfinance"/>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="finance != null">
                and <include refid="setfinance"/>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="collectdetail">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="finance != null">
                and <include refid="setfinance"/>
            </if>
            <if test="finance_in != null">
                and `finance` in 
                 <foreach item="item" index="index" collection="finance_in" open="(" separator="," close=")">  
                    #{item}
                </foreach>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="collectdetail">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="collectdetail">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="type != null">
                <include refid="settype"/>,
            </if>
            <if test="finance != null">
                and <include refid="setfinance"/>
            </if>
            <if test="refuid != null">
                <include refid="setrefuid"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>
    
    <delete id="deleteByMap" parameterType="string">
        delete from
        <include refid="table"/>
       <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="finance != null">
                and <include refid="setfinance"/>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </delete>

</mapper>

