<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.moralnews.dao.NewsDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`fromuid`, `touid`, `title`, `content`, `href`, `type`, `isread`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">news</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="whereuseruid">where touid = #{touid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{fromuid},#{touid},#{title},#{content},#{href},#{type},#{isread},#{status}</sql>
    <sql id="setfromuid">`fromuid` = #{fromuid}</sql>
    <sql id="settouid">`touid` = #{touid}</sql>
    <sql id="settitle">`title` = #{title}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="sethref">`href` = #{href}</sql>
    <sql id="settype">`type` = #{type}</sql>
    <sql id="setisread">`isread` = #{isread}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setfromuid"/>,
            <include refid="settouid"/>,
            <include refid="settitle"/>,
            <include refid="setcontent"/>,
            <include refid="sethref"/>,
            <include refid="settype"/>,
            <include refid="setisread"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="news">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="news">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="fromuid != null">
                and <include refid="setfromuid"/>
            </if>
            <if test="touid != null">
                and <include refid="settouid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="href != null">
                and <include refid="sethref"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="isread != null">
                and <include refid="setisread"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="fromuid != null">
                and <include refid="setfromuid"/>
            </if>
            <if test="touid != null">
                and <include refid="settouid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="href != null">
                and <include refid="sethref"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="isread != null">
                and <include refid="setisread"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="news">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="fromuid != null">
                and <include refid="setfromuid"/>
            </if>
            <if test="touid != null">
                and <include refid="settouid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="href != null">
                and <include refid="sethref"/>
            </if>
            <if test="type != null">
                and <include refid="settype"/>
            </if>
            <if test="isread != null">
                and <include refid="setisread"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="news">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="news">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>
	
	<update id="updateByUseruid" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="fromuid != null">
                <include refid="setfromuid"/>,
            </if>
            <if test="touid != null">
                <include refid="settouid"/>,
            </if>
            <if test="title != null">
                <include refid="settitle"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="href != null">
                <include refid="sethref"/>,
            </if>
            <if test="type != null">
                <include refid="settype"/>,
            </if>
            <if test="isread != null">
                <include refid="setisread"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereuseruid"/>
    </update>
    
    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="fromuid != null">
                <include refid="setfromuid"/>,
            </if>
            <if test="touid != null">
                <include refid="settouid"/>,
            </if>
            <if test="title != null">
                <include refid="settitle"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="href != null">
                <include refid="sethref"/>,
            </if>
            <if test="type != null">
                <include refid="settype"/>,
            </if>
            <if test="isread != null">
                <include refid="setisread"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

