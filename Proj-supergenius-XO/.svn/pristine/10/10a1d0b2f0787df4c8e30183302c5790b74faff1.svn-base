<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.manager.dao.UserStaticsDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns"><include refid="basecolumns"/>, `useruid`, `pkcount`, `watchpkcount`, `replycount`, `judgecount`, `expertcount`, `visitorcount`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">userstatics</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{useruid},#{pkcount},#{watchpkcount},#{replycount},#{judgecount},#{expertcount},#{visitorcount},#{status}</sql>
    <sql id="setuseruid">`useruid` = #{useruid}</sql>
    <sql id="setuid">uid = #{uid}</sql>
    <sql id="setpkcount">`pkcount` = #{pkcount}</sql>
    <sql id="setwatchpkcount">`watchpkcount` = #{watchpkcount}</sql>
    <sql id="setreplycount">`replycount` = #{replycount}</sql>
    <sql id="setjudgecount">`judgecount` = #{judgecount}</sql>
    <sql id="setexpertcount">`expertcount` = #{expertcount}</sql>
    <sql id="setvisitorcount">`visitorcount` = #{visitorcount}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setuseruid"/>,
            <include refid="setpkcount"/>,
            <include refid="setwatchpkcount"/>,
            <include refid="setreplycount"/>,
            <include refid="setjudgecount"/>,
            <include refid="setexpertcount"/>,
            <include refid="setvisitorcount"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="userstatics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="userstatics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="uid != null">
                and <include refid="setuid"/>
            </if>         
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="pkcount != null">
                and <include refid="setpkcount"/>
            </if>
            <if test="watchpkcount != null">
                and <include refid="setwatchpkcount"/>
            </if>
            <if test="replycount != null">
                and <include refid="setreplycount"/>
            </if>
            <if test="judgecount != null">
                and <include refid="setjudgecount"/>
            </if>
            <if test="expertcount != null">
                and <include refid="setexpertcount"/>
            </if>
            <if test="visitorcount != null">
                and <include refid="setvisitorcount"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="pkcount != null">
                and <include refid="setpkcount"/>
            </if>
            <if test="watchpkcount != null">
                and <include refid="setwatchpkcount"/>
            </if>
            <if test="replycount != null">
                and <include refid="setreplycount"/>
            </if>
            <if test="judgecount != null">
                and <include refid="setjudgecount"/>
            </if>
            <if test="expertcount != null">
                and <include refid="setexpertcount"/>
            </if>
            <if test="visitorcount != null">
                and <include refid="setvisitorcount"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="userstatics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="pkcount != null">
                and <include refid="setpkcount"/>
            </if>
            <if test="watchpkcount != null">
                and <include refid="setwatchpkcount"/>
            </if>
            <if test="replycount != null">
                and <include refid="setreplycount"/>
            </if>
            <if test="judgecount != null">
                and <include refid="setjudgecount"/>
            </if>
            <if test="expertcount != null">
                and <include refid="setexpertcount"/>
            </if>
            <if test="visitorcount != null">
                and <include refid="setvisitorcount"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="userstatics">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="userstatics">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="pkcount != null">
                <include refid="setpkcount"/>,
            </if>
            <if test="watchpkcount != null">
                <include refid="setwatchpkcount"/>,
            </if>
            <if test="replycount != null">
                <include refid="setreplycount"/>,
            </if>
            <if test="judgecount != null">
                <include refid="setjudgecount"/>,
            </if>
            <if test="expertcount != null">
                <include refid="setexpertcount"/>,
            </if>
            <if test="visitorcount != null">
                <include refid="setvisitorcount"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

