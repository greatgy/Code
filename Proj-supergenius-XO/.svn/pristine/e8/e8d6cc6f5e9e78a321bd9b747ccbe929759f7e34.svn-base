<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.user.dao.SafeQADao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns"><include refid="basecolumns"/>, `useruid`, `question`, `answer`, `sortorder` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">safeqa</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{useruid},#{question},#{answer},#{sortorder}</sql>
    <sql id="setuseruid">useruid = #{useruid}</sql>
    <sql id="setquestion">question = #{question}</sql>
    <sql id="setanswer">answer = #{answer}</sql>
    <sql id="setsortorder">sortorder = #{sortorder}</sql>
    <sql id="allsets">set
            <include refid="setuseruid"/>,
            <include refid="setquestion"/>,
            <include refid="setanswer"/>,
            <include refid="setsortorder"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="safeqa">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="safeqa">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="question != null">
                and <include refid="setquestion"/>
            </if>
            <if test="answer != null">
                and <include refid="setanswer"/>
            </if>
            <if test="sortorder != null">
                and <include refid="setsortorder"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="question != null">
                and <include refid="setquestion"/>
            </if>
            <if test="answer != null">
                and <include refid="setanswer"/>
            </if>
            <if test="sortorder != null">
                and <include refid="setsortorder"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="safeqa">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="useruid != null">
                and <include refid="setuseruid"/>
            </if>
            <if test="question != null">
                and <include refid="setquestion"/>
            </if>
            <if test="answer != null">
                and <include refid="setanswer"/>
            </if>
            <if test="sortorder != null">
                and <include refid="setsortorder"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="safeqa">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="safeqa">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="useruid != null">
                <include refid="setuseruid"/>,
            </if>
            <if test="question != null">
                <include refid="setquestion"/>,
            </if>
            <if test="answer != null">
                <include refid="setanswer"/>,
            </if>
            <if test="sortorder != null">
                <include refid="setsortorder"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

