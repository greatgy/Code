<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.startup.dao.LabelDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`content`, `count`, `isrecommend`, `refuid`, `adminuid`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">label</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{content},#{count},#{isrecommend},#{refuid},#{adminuid},#{status}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="setcount">`count` = #{count}</sql>
    <sql id="setrefuid">`refuid` = #{refuid}</sql>
    <sql id="setisrecommend">`isrecommend` = #{isrecommend}</sql>
    <sql id="setarticleuid">`refuid` like CONCAT('%', #{articleuid}, '%')</sql>
    <sql id="setadminuid">`adminuid` = #{adminuid}</sql>
    <sql id="setcontent_lk">`content` like CONCAT('%', #{content_lk}, '%')</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="setcreatetimestartne">createtime &gt; #{createtimestartne}</sql>
	<sql id="setcreatetimeendne">createtime &lt; #{createtimeendne}</sql>
    <sql id="allsets">set
            <include refid="setcontent"/>,
            <include refid="setcount"/>,
            <include refid="setisrecommend"/>,
            <include refid="setrefuid"/>,
            <include refid="setadminuid"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="label">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="label">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="count != null">
                and <include refid="setcount"/>
            </if>
            <if test="isrecommend != null">
                and <include refid="setisrecommend"/>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="content_lk != null">
                and <include refid="setcontent_lk"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="count != null">
                and <include refid="setcount"/>
            </if>
            <if test="isrecommend != null">
                and <include refid="setisrecommend"/>
            </if>
            <if test="content_lk != null">
                and <include refid="setcontent_lk"/>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="label">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="count != null">
                and <include refid="setcount"/>
            </if>
            <if test="isrecommend != null">
                and <include refid="setisrecommend"/>
            </if>
            <if test="refuid != null">
                and <include refid="setrefuid"/>
            </if>
            <if test="articleuid != null">
                and <include refid="setarticleuid"/>
            </if>
            <if test="adminuid != null">
                and <include refid="setadminuid"/>
            </if>
            <if test="content_lk != null">
                and <include refid="setcontent_lk"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="createtimestartne != null">
				and <include refid="setcreatetimestartne" />
			</if>
			<if test="createtimeendne != null">
				and <include refid="setcreatetimeendne" />
			</if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="label">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="label">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="count != null">
                <include refid="setcount"/>,
            </if>
            <if test="isrecommend != null">
                <include refid="setisrecommend"/>,
            </if>
            <if test="refuid != null">
                <include refid="setrefuid"/>,
            </if>
            <if test="adminuid != null">
                <include refid="setadminuid"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

