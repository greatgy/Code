<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.admin.dao.EmailLogDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns"><include refid="basecolumns"/>, `adminid`, `title`, `content`, `receiver`, `sender` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">emaillog</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{adminid},#{title},#{content},#{receiver},#{sender}</sql>
    <sql id="setadminid">`adminid` = #{adminid}</sql>
    <sql id="settitle">`title` = #{title}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="setreceiver">`receiver` = #{receiver}</sql>
    <sql id="setsender">`sender` = #{sender}</sql>
    <sql id="allsets">set
            <include refid="setadminid"/>,
            <include refid="settitle"/>,
            <include refid="setcontent"/>,
            <include refid="setreceiver"/>,
            <include refid="setsender"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="emailLog">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="emailLog">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="adminid != null">
                and <include refid="setadminid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="receiver != null">
                and <include refid="setreceiver"/>
            </if>
            <if test="sender != null">
                and <include refid="setsender"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="adminid != null">
                and <include refid="setadminid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="receiver != null">
                and <include refid="setreceiver"/>
            </if>
            <if test="sender != null">
                and <include refid="setsender"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="emailLog">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="adminid != null">
                and <include refid="setadminid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="receiver != null">
                and <include refid="setreceiver"/>
            </if>
            <if test="sender != null">
                and <include refid="setsender"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="emailLog">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="emailLog">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="adminid != null">
                <include refid="setadminid"/>,
            </if>
            <if test="title != null">
                <include refid="settitle"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="receiver != null">
                <include refid="setreceiver"/>,
            </if>
            <if test="sender != null">
                <include refid="setsender"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

