<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.usweb.dao.ContentDao">

    <sql id="basecolumns">`createtime` </sql>
    <sql id="othercolumns">`id`, `name`, `content`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">content</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where id = #{id}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{createtime},#{id},#{name},#{content},#{status}</sql>
    <sql id="setid">`id` = #{id}</sql>
    <sql id="setname">`name` = #{name}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setid"/>,
            <include refid="setname"/>,
            <include refid="setcontent"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="content">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="content">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="id != null">
                and <include refid="setid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="id != null">
                and <include refid="setid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="content">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="id != null">
                and <include refid="setid"/>
            </if>
            <if test="name != null">
                and <include refid="setname"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="content">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="content">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="id != null">
                <include refid="setid"/>,
            </if>
            <if test="name != null">
                <include refid="setname"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

