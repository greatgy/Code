<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.genius.xo.portal.dao.ContentDao">
	
	<sql id="basecolumns">`oid`,`createtime`</sql>
	<sql id="allcolumns"><include refid="basecolumns"/>, `type`, `adminuid`, `title`, `titleshort`, `titleimg`, `imglittle`, `imgmedium`, `isimgshow`, `author`, `origin`, `originurl`, `content`, `status`, `istop`, `keywords`, `description`, `sortorder` , `updatetime`, `imgoriginal`, `imgbig`, `summary`, `updatetime`</sql>
	<sql id="table">content</sql>
	<sql id="whereid">where oid = #{oid}</sql>
	<sql id="setwhereistop"> where istop = true and type = #{type}</sql>
	<sql id="allfields"><include refid="basecolumns"/>, `type`, `adminuid`, `title`, `titleshort`, `titleimg`, `imglittle`, `imgmedium`, `isimgshow`, `author`, `origin`, `originurl`, `content`, `status`, `istop`, `keywords`, `description`, `sortorder`,`imgoriginal`, `imgbig`, `summary`</sql>
	<sql id="allparams">#{oid},#{createtime},#{type},#{adminuid},#{title},#{titleshort},#{titleimg},#{imglittle},#{imgmedium},#{isimgshow},#{author},#{origin},#{originurl},#{content},#{status},#{istop}, #{keywords}, #{description},#{sortorder},#{imgoriginal},#{imgbig},#{summary}</sql>
	<sql id="count">count(*)</sql>
	<sql id="settype">type = #{type}</sql>
	<sql id="setadminuid">adminuid = #{adminuid}</sql>
	<sql id="setcontent">content = #{content}</sql>
	<sql id="settitle">title = #{title}</sql>
	<sql id="settitle_lk">title like CONCAT('%',#{title_lk},'%')</sql>
	<sql id="setauthor">author = #{author}</sql>
	<sql id="setstatus">status = #{status}</sql>
	<sql id="setoid">oid = #{oid}</sql>
	<sql id="settitleshort">titleshort = #{titleshort}</sql>
	<sql id="settitleimg">titleimg = #{titleimg}</sql>
	<sql id="setimglittle">imglittle = #{imglittle}</sql>
	<sql id="setimgmedium">imgmedium = #{imgmedium}</sql>
	<sql id="setisimgshow">isimgshow = #{isimgshow}</sql>
	<sql id="setimgoriginal">imgoriginal = #{imgoriginal}</sql>
	<sql id="setimgbig">imgbig = #{imgbig}</sql>
	<sql id="setsummary">summary = #{summary}</sql>
	<sql id="setorigin">origin = #{origin}</sql>
	<sql id="setoriginurl">originurl = #{originurl}</sql>
	<sql id="setsortorder">sortorder = #{sortorder}</sql>
	<sql id="setistop">istop = #{istop}</sql>
	<sql id="setkeywords">keywords = #{keywords}</sql>
	<sql id="setdescription">description = #{description}</sql>
	<sql id="allsets">set <include refid="settype"/>,<include refid="setadminuid"/>,
	<include refid="settitle"/>,
	<include refid="settitleshort"/>,
	<include refid="settitleimg"/>,
	<include refid="setimglittle"/>,
	<include refid="setimgmedium"/>,
	<include refid="setisimgshow"/>,
	<include refid="setauthor"/>,
	<include refid="setimgoriginal"/>,
	<include refid="setimgbig"/>,
	<include refid="setsummary"/>,
	<include refid="setorigin"/>,<include refid="setoriginurl"/>,
	<include refid="setcontent"/>,<include refid="setsortorder"/>,
	<include refid="setstatus"/></sql>
	<sql id="orderby">order by createtime</sql>
	
	<select id="get" parameterType="string" resultType="content">
		select
		<include refid="allcolumns" />
		from
		<include refid="table"/>
		<include refid="whereid"/>
	</select>
	
	<select id="getOne" parameterType="hashMap" resultType="content">
		select
		<include refid="allcolumns" />
		from
		<include refid="table"/>
		<where>
			<if test="oid != null">
				and <include refid="setoid"/>
			</if>
			<if test="adminuid != null">
				and <include refid="setadminuid"/>
			</if>
			<if test="content != null">
				and <include refid="setcontent"/>
			</if>
			<if test="title != null">
				and <include refid="settitle"/>
			</if>
			<if test="imgoriginal != null">
				and <include refid="setimgoriginal"/>
			</if>
			<if test="imgbig != null">
				and <include refid="setimgbig"/>
			</if>
			<if test="summary != null">
				and <include refid="setsummary"/>
			</if>
			<if test="author != null">
				and <include refid="setauthor"/>
			</if>
			<if test="type != null">
				and <include refid="settype"/>
			</if>
			<if test="title_lk != null">
				and <include refid="settitle_lk"/>
			</if>
			<if test="istop != null">
				and <include refid="setistop"/>
			</if>
			<if test="keywords != null">
				and <include refid="setkeywords"/>
			</if>
			<if test="description != null">
				and <include refid="setdescription"/>
			</if>
			<if test="status != null">
				and <include refid="setstatus"/>
			</if>
		</where>
		LIMIT 0,1
	</select>
	
	<select id="getList" parameterType="hashMap" resultType="content">
		select
		<include refid="allcolumns" />
		from
		<include refid="table"/>
		<where>
			<if test="oid != null">
				and <include refid="setoid"/>
			</if>
			<if test="adminuid != null">
				and <include refid="setadminuid"/>
			</if>
			<if test="content != null">
				and <include refid="setcontent"/>
			</if>
			<if test="title != null">
				and <include refid="settitle"/>
			</if>
			<if test="imgoriginal != null">
				and <include refid="setimgoriginal"/>
			</if>
			<if test="imgbig != null">
				and <include refid="setimgbig"/>
			</if>
			<if test="summary != null">
				and <include refid="setsummary"/>
			</if>
			<if test="author != null">
				and <include refid="setauthor"/>
			</if>
			<if test="type != null">
				and <include refid="settype"/>
			</if>
			<if test="title_lk != null">
				and <include refid="settitle_lk"/>
			</if>
			<if test="istop != null">
				and <include refid="setistop"/>
			</if>
			<if test="keywords != null">
				and <include refid="setkeywords"/>
			</if>
			<if test="description != null">
				and <include refid="setdescription"/>
			</if>
			<if test="status != null">
				and <include refid="setstatus"/>
			</if>
		</where>
		<!-- 处理orderby语句 -->
		<choose>
			<when test="orderBy != null">
				${orderBy}
			</when>
			<otherwise>
				<include refid="orderby"/>
				<if test="ascDesc != null">
					${ascDesc}
				</if>
			</otherwise>
		</choose>
		<!-- 处理limit语句 -->
		<trim prefix="LIMIT" prefixOverrides=",">
			<if test="startIndex != null and pageSize != null">
				${startIndex}
			</if>
			<if test="pageSize != null">
			 , ${pageSize}
			 </if>
		</trim>
	</select>
	
	<insert id="insert" parameterType="content">
		<selectKey resultType="int" keyProperty="oid">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into
		<include refid="table"/>
		(<include refid="allfields"/>)
		values (
			<include refid="allparams"/>
		)
	</insert>
	
	<update id="update" parameterType="content">
		update
		<include refid="table"/>
		<include refid="allsets"/>
		<include refid="whereid"/>
	</update>

	<update id="updateFields" parameterType="hashMap">
		update
		<include refid="table"/>
		<set>
			<if test="type != null">
				<include refid="settype"/>,
			</if>
			<if test="adminuid != null">
				<include refid="setadminuid"/>,
			</if>
			<if test="content != null">
				<include refid="setcontent"/>,
			</if>
			<if test="title != null">
				<include refid="settitle"/>,
			</if>
			<if test="author != null">
				<include refid="setauthor"/>,
			</if>
			<if test="origin != null">
				<include refid="setorigin"/>,
			</if>
			<if test="originurl != null">
				<include refid="setoriginurl"/>,
			</if>
			<if test="imgoriginal != null">
			    <include refid="setimgoriginal"/>,
			</if>
			<if test="imgbig != null">
				<include refid="setimgbig"/>,
			</if>
			<if test="summary != null">
				<include refid="setsummary"/>,
			</if>
			<if test="istop != null">
				<include refid="setistop"/>,
			</if>
			<if test="keywords != null">
				<include refid="setkeywords"/>,
			</if>
			<if test="description != null">
				<include refid="setdescription"/>,
			</if>
			<if test="status != null">
				<include refid="setstatus"/>,
			</if>
		</set>
		<if test="oid != null">
			<include refid="whereid"/>
		</if>
		<if test="whereistop != null">
			<include refid="setwhereistop"/>
		</if>
	</update>
	
	<select id="getCount" parameterType="hashMap" resultType="int">
		select
		<include refid="count" />
		from
		<include refid="table"/>
		<where>
			<if test="oid != null">
				and <include refid="setoid"/>
			</if>
			<if test="type != null">
				and <include refid="settype"/>
			</if>
			<if test="adminuid != null">
				and <include refid="setadminuid"/>
			</if>
			<if test="content != null">
				and <include refid="setcontent"/>
			</if>
			<if test="title != null">
				and <include refid="settitle"/>
			</if>
			<if test="title_lk != null">
				and <include refid="settitle_lk"/>
			</if>
			<if test="author != null">
				and <include refid="setauthor"/>
			</if>
			<if test="origin != null">
				and <include refid="setorigin"/>
			</if>
			<if test="originurl != null">
				and <include refid="setoriginurl"/>
			</if>
			<if test="imgoriginal != null">
				and <include refid="setimgoriginal"/>
			</if>
			<if test="imgbig != null">
				and <include refid="setimgbig"/>
			</if>
			<if test="summary != null">
				and <include refid="setsummary"/>
			</if>
			<if test="istop != null">
				and <include refid="setistop"/>
			</if>
			<if test="keywords != null">
				and <include refid="setkeywords"/>
			</if>
			<if test="description != null">
				and <include refid="setdescription"/>
			</if>
			<if test="status != null">
				and <include refid="setstatus"/>
			</if>
		</where>
	</select>

	
	<delete id="delete" parameterType="string">
		delete from
		<include refid="table"/>
		<include refid="whereid"/>
	</delete>
	
</mapper>