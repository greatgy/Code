<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supergenius.xo.career.dao.StatisticsDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`data`, `servant`, `profession`, `art`, `marketing`, `manager`, `artisan`, `ruleruid`, `loginip`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">statistics</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{data},#{servant},#{profession},#{art},#{marketing},#{manager},#{artisan},#{ruleruid},#{loginip},#{status}</sql>
    <sql id="setdata">`data` = #{data}</sql>
    <sql id="setservant">`servant` = #{servant}</sql>
    <sql id="setprofession">`profession` = #{profession}</sql>
    <sql id="setart">`art` = #{art}</sql>
    <sql id="setmarketing">`marketing` = #{marketing}</sql>
    <sql id="setmanager">`manager` = #{manager}</sql>
    <sql id="setartisan">`artisan` = #{artisan}</sql>
    <sql id="setruleruid">`ruleruid` = #{ruleruid}</sql>
    <sql id="setloginip">`loginip` = #{loginip}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="allsets">set
            <include refid="setdata"/>,
            <include refid="setservant"/>,
            <include refid="setprofession"/>,
            <include refid="setart"/>,
            <include refid="setmarketing"/>,
            <include refid="setmanager"/>,
            <include refid="setartisan"/>,
            <include refid="setruleruid"/>,
            <include refid="setloginip"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="statistics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="statistics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="servant != null">
                and <include refid="setservant"/>
            </if>
            <if test="profession != null">
                and <include refid="setprofession"/>
            </if>
            <if test="art != null">
                and <include refid="setart"/>
            </if>
            <if test="marketing != null">
                and <include refid="setmarketing"/>
            </if>
            <if test="manager != null">
                and <include refid="setmanager"/>
            </if>
            <if test="artisan != null">
                and <include refid="setartisan"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="servant != null">
                and <include refid="setservant"/>
            </if>
            <if test="profession != null">
                and <include refid="setprofession"/>
            </if>
            <if test="art != null">
                and <include refid="setart"/>
            </if>
            <if test="marketing != null">
                and <include refid="setmarketing"/>
            </if>
            <if test="manager != null">
                and <include refid="setmanager"/>
            </if>
            <if test="artisan != null">
                and <include refid="setartisan"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="statistics">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="data != null">
                and <include refid="setdata"/>
            </if>
            <if test="servant != null">
                and <include refid="setservant"/>
            </if>
            <if test="profession != null">
                and <include refid="setprofession"/>
            </if>
            <if test="art != null">
                and <include refid="setart"/>
            </if>
            <if test="marketing != null">
                and <include refid="setmarketing"/>
            </if>
            <if test="manager != null">
                and <include refid="setmanager"/>
            </if>
            <if test="artisan != null">
                and <include refid="setartisan"/>
            </if>
            <if test="ruleruid != null">
                and <include refid="setruleruid"/>
            </if>
            <if test="loginip != null">
                and <include refid="setloginip"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="statistics">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="statistics">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="data != null">
                <include refid="setdata"/>,
            </if>
            <if test="servant != null">
                <include refid="setservant"/>,
            </if>
            <if test="profession != null">
                <include refid="setprofession"/>,
            </if>
            <if test="art != null">
                <include refid="setart"/>,
            </if>
            <if test="marketing != null">
                <include refid="setmarketing"/>,
            </if>
            <if test="manager != null">
                <include refid="setmanager"/>,
            </if>
            <if test="artisan != null">
                <include refid="setartisan"/>,
            </if>
            <if test="ruleruid != null">
                <include refid="setruleruid"/>,
            </if>
            <if test="loginip != null">
                <include refid="setloginip"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

