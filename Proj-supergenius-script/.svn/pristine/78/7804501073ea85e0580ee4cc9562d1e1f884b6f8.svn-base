[#ftl]
[#if list?size > 0]
	[#list list as item]
		<div class="content">
			<a href="${baseFinancePath}/geniusfocus/${item.oid}" class="pull-left col-xs-4 col-sm-3 li_img">
				<img src="${webimg}${item.imgoriginal}" alt="" class="img-responsive" />
			</a>
			<div class="right_content col-xs-8 col-sm-9">
				<h5 class="title"><a href="${baseFinancePath}/geniusfocus/${item.oid}">${item.title}</a></h5>
				<div class="detail">${item.author}~发表于${item.createtime.toString("YYYY-MM-dd")}</div>
				<div class="introduce">
					[#if item.content?length gt 45]
						${item.content?substring(0,45)}...
					[#else]
						${item.content}...
					[/#if]
				</div>
			</div>
		</div>
		[#if item_has_next]<hr />[/#if]
	[/#list]	
[/#if]