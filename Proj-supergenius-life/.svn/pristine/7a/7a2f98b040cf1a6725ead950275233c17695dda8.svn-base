[#ftl]
[#import "/WEB-INF/FtlLib/Macro/Public.ftl" as p]
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>追梦时光--我的舞台</title>
	<meta name="Keywords" content="天才人生,我的舞台" />
	<meta name="Description" content="天才人生,我的舞台" />
	<link rel="stylesheet" type="text/css" href="${basecss}/css/bootstrap.min.css">
	<link rel="stylesheet" href="${basecss}/css/default/index.css">
	<script type="text/javascript">
		$(function(){
			$("#hot").click(function(){
				$("#videoList").hide();
				$("#hotList").show();
				$("#new").removeClass("curjudge");
				$("#hot").addClass("curjudge");
			});
			$("#new").click(function(){
				$("#videoList").show();
				$("#hotList").hide();
				$("#hot").removeClass("curjudge");
				$("#new").addClass("curjudge");
			});
		});
	</script>
	<style>
		a:focus,a:hover{
			text-decoration: none;
		}
	</style>
</head>
<body>
	<div class="topicBox">
		<ul class="judgement">
			<li class="curjudge" id="new">最新</li>
			<li id="hot">最热</li>
		</ul>
		[#if me??]
			<a href="${base}/my/addvideo/${cid}" class="publishBtn">上传才艺</a>
		[#else]
			<button class="publishBtn pop-up">上传才艺</button>
		[/#if]
		<ul class="talentList topicList" id="videoList">
			[#if videoList??]
				[#list videoList as item]	
						<li>
							<a href="${base}/videoDetail/${cid}/${item.uid}">
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.title}" title="${item.title}" />
								<div class="play">
									<img src="${baseimg}/imgs/default/playbtn.png" alt="播放" title="播放">
								</div>
							</a>
							<div class="talentDetail">
								<span class="talentTitle"><i class="type">${item.keywordsname}</i>${item.title}</span>
								<span class="looktimes">
									<img src="${baseimg}/imgs/default/audience.png" alt="">
									${item.clickCount}人观看
								</span>
								<p>
									<img src="${item.user.useravatar}" [#if item.user.getIsUser()]class="memberUserimg"[/#if] alt="${item.user.username}" title="${item.user.username}" />
									[#if item.user.getIsUser()]<img src="${baseimg}/imgs/default/prince.png" class="princeimgs" alt="" />[/#if]
									[@p.PrivateString content="${item.user.username}" /]
									<span class="time">上传于<i>${(item.createtime).toString("YYYY.M.dd")}</i></span>
								</p>
							</div>
						</li>
				[/#list]
			[/#if]
		</ul>
		
		<ul class="talentList topicList hd" id="hotList">
			[#if hotVideoList??]
				[#list hotVideoList as item]	
						<li>
							<a href="${base}/videoDetail/${cid}/${item.uid}">
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.title}" title="${item.title}" />
							</a>
							<div class="talentDetail">
								<span class="talentTitle"><i class="type">${item.keywordsname}</i>${item.title}</span>
								<span class="looktimes">
									<img src="${baseimg}/imgs/default/audience.png" alt="">
									${item.clickCount}人观看
								</span>
								<p>
									<img src="${item.user.useravatar}" [#if item.user.getIsUser()]class="memberUserimg"[/#if] alt="${item.user.username}" title="${item.user.username}" />
									[#if item.user.getIsUser()]<img src="${baseimg}/imgs/default/prince.png" class="princeimgs" alt="" />[/#if]
									[@p.PrivateString content="${item.user.username}" /]
									<span class="time">上传于<i>${(item.createtime).toString("YYYY.M.dd")}</i></span>
								</p>
							</div>
						</li>
				[/#list]
			[/#if]
		</ul>
	</div>
</body>
</html>