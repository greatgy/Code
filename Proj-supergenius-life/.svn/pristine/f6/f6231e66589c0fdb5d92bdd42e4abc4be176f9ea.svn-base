							</a>	
						[#elseif i == 5]
							<a href="${base}/course/morecourse?sid=${courtse.sid}&grade=${courtse.grade}" class="moreCourse">&gt;</a>
						[/#if]
						[#assign i = i + 1]
					[/#list]
					
				[/#if]
