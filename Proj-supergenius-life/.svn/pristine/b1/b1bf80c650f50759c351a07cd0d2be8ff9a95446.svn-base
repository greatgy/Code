[#ftl]
[#import "/WEB-INF/FtlLib/Macro/Public.ftl" as p]
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>${title!'天才人生——资料交流'}</title>
	<meta name="Keywords" content="天才人生，资料交流" />
	<meta name="Description" content="天才人生，资料交流" />
	<link rel="stylesheet" href="${basecss}/css/default/index.css">
</head>
<body>
	<div class="questionBox">
		<h4 class="exclusiveTag">
			[#if me??]
				<a class="pubQuestion" href="${base}/addproblem/${cid}">添加足迹</a>
			[#else]
				<a class="pubQuestion pop-up" >添加足迹</a>
			[/#if]
		</h4>
		<ul class="quizList askQuestionList">
			[#if problemList??]
			[#list problemList as item]
				<li>
					<img src="${item.user.useravatar}" [#if item.user.getIsUser()]class="memberUserimg"[/#if] alt="${item.user.username}" title="${item.user.username}" />
					[#if item.user.getIsUser()]<img src="${baseimg}/imgs/default/prince.png" class="princeimg" alt="" />[/#if]
					<a href="${base}/problem/detail/${(item.cid)?c}/${(item.oid)?c}">
					<div class="col-xs-8 col-sm-9">
						<h4>${item.title}</h4>
						<p>
						[#if item.content==""]
						[#else]
							[@p.TrimSubstring content="${item.content}" mylength=50 /]
						[/#if]
						</p>
					</div>
					<div class="col-xs-4 col-sm-3">
						<div class="readitem col-sm-6 col-xs-6">
							阅读
							<span class="readNum">${item.clickcount}</span>	
						</div>
						<div class="readitem col-sm-6 col-xs-6">
							回答
							<span class="readNum">${item.commentscount}</span>	
						</div>
					</div>
					</a>
				</li>
			[/#list]
			[/#if]
		</ul>
	</div>
</body>
</html>