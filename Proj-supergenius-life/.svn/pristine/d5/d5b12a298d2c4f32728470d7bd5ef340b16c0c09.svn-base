[#ftl]
[#import "/WEB-INF/FtlLib/Macro/Public.ftl" as p]
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>梦之初心--效果检验</title>
	<meta name="Keywords" content="天才人生,效果检验" />
	<meta name="Description" content="天才人生,效果检验" />
	<link rel="stylesheet" type="text/css" href="${basecss}/css/bootstrap.min.css">
	<link rel="stylesheet" href="${basecss}/css/default/index.css">
	<script type="text/javascript">
		$(function(){
			$("#hot").click(function(){
				$("#videoList").hide();
				$("#hotList").show();
				$("#new").removeClass("curjudge");
				$("#hot").addClass("curjudge");
			});
			$("#new").click(function(){
				$("#videoList").show();
				$("#hotList").hide();
				$("#hot").removeClass("curjudge");
				$("#new").addClass("curjudge");
			});
		});
	</script>
	<style>
		a:focus,a:hover{
			text-decoration: none;
		}
	</style>
</head>
<body>
	<div class="effectInspection" style="background: #fed811 url(${webimg}${photo.content}) no-repeat center center">
	[#if me??]
		<a href="${base}/my/addvideo/${cid}" class="publishFruit"><i>+</i>发布自学成果</a>
	[#else]
		<button class="publishFruit pop-up"><i>+</i>发布自学成果</button>
	[/#if]
	</div>
	<div class="fruitBox">
		<ul class="judgement">
			<li class="curjudge" id="new">最新</li>
			<li id="hot">最热</li>
		</ul>
		<ul class="talentList fruitsList" id="videoList">
			[#if videoList??]
				[#list videoList as item]	
						<li>
							<a 
							[#if me??]
			            		[#if me.getIsUser()]href="${base}/videoDetail/${cid}/${item.uid}"[#else]href="javascript:;" class="normalUsertip"[/#if]
			            	[#else]
			            		href="javascript:;" class="pop-up"
			            	[/#if]>
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.title}" title="${item.title}" />
							</a>
							<div class="talentDetail">
								<span class="talentTitle">${item.title}</span>
								[#if item.ismember == 1] 
									[#if item.state == 2]
										<span class="comment commented">
											专家已点评
										</span>
									[#elseif item.state == 0]
										<span class="comment">
											未点评
										</span>
									[/#if]
								[/#if]
								<p>
									<img src="${item.user.useravatar}" [#if item.user.getIsUser()]class="memberUserimg"[/#if] alt="${item.user.username}" title="${item.user.username}" />
									[#if item.user.getIsUser()]<img src="${baseimg}/imgs/default/prince.png" class="princeimg" alt="" />[/#if]
									[@p.PrivateString content="${item.user.username}" /]
									<span class="time">上传于<i>${(item.createtime).toString("YYYY.M.dd")}</i></span>
								</p>
							</div>
						</li>
				[/#list]
			[/#if]
		</ul>
		
		<ul class="talentList fruitsList hd" id="hotList">
			[#if videoList??]
				[#list videoList as item]	
						<li>
							<a 
							[#if me??]
			            		[#if me.getIsUser()]href="${base}/videoDetail/${cid}/${item.uid}"[#else]href="javascript:;" class="normalUsertip"[/#if]
			            	[#else]
			            		href="javascript:;" class="pop-up"
			            	[/#if]>
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.tittle}" title="${item.tittle}" />
							</a>
							<div class="talentDetail">
								<span class="talentTitle">${item.title}</span>
								[#if item.ismember == 1] 
									[#if item.state == 2]
										<span class="comment commented">
											专家已点评
										</span>
									[#elseif item.state == 0]
										<span class="comment">
											未点评
										</span>
									[/#if]
								[/#if]
								<p>
									<img src="${item.user.useravatar}" [#if item.user.getIsUser()]class="memberUserimg"[/#if] alt="${item.user.username}" title="${item.user.username}" />
									[#if item.user.getIsUser()]<img src="${baseimg}/imgs/default/prince.png" class="princeimg" alt="" />[/#if]
									[@p.PrivateString content="${item.user.username}" /]
									<span class="time">上传于<i>${(item.createtime).toString("YYYY.M.dd")}</i></span>
								</p>
							</div>
						</li>
				[/#list]
			[/#if]
		</ul>
	</div>
</body>
</html>