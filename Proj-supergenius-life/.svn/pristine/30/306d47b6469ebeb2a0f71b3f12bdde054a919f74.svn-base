[#ftl]
[#import "/WEB-INF/FtlLib/Macro/Public.ftl" as p]
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>梦之初心--效果检验</title>
	<meta name="Keywords" content="天才人生,效果检验" />
	<meta name="Description" content="天才人生,效果检验" />
	<link rel="stylesheet" type="text/css" href="${basecss}/css/bootstrap.min.css">
	<link rel="stylesheet" href="${basecss}/css/default/index.css">
	<link rel="stylesheet" href="${basecss}/css/pagination.css">
	<script type="text/javascript" src="${basejs}/js/libs/jquery.pagination.js"></script>
</head>
<body>
	<div class="effectInspection" style="background: #fed811 url(${webimg}${photo.content}) no-repeat center center">
		<a href="${base}/addvideo/${cid}" class="publishFruit"><i>+</i>发布自学成果</a>
	</div>
	<div class="fruitBox">
		<ul class="judgement">
			<li class="curjudge">最新</li>
			<li>最热</li>
		</ul>
		<ul class="talentList fruitsList" id="videoList">
			[#if videoList??]
				[#list videoList as item]	
						<li>
							<a href="${base}/videoDetail/${cid}/${item.uid}">
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.tittle}" title="${item.tittle}" />
								<div class="totalTime">
									05:36
								</div>
							</a>
							<div class="talentDetail">
								<span class="talentTitle">${item.tittle}</span>
								[#if item.ismember == 1] 
									[#if item.state == 2]
										<span class="comment commented">
											专家已点评
										</span>
									[#elseif item.state == 0]
										<span class="comment">
											未点评
										</span>
									[/#if]
								[/#if]
								<p>
									<img src="${item.user.useravatar}" alt="上传者" title="上传者" />
									${item.user.username}
									<span class="time">上传于<i>${(item.createtime).toString("M月dd日")}</i></span>
								</p>
							</div>
						</li>
				[/#list]
			[/#if]
		</ul>
		
		<ul class="talentList fruitsList hd" id="hotList">
			[#if videoList??]
				[#list videoList as item]	
						<li>
							<a href="${base}/videoDetail/${cid}/${item.uid}">
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.tittle}" title="${item.tittle}" />
								<div class="totalTime">
									05:36
								</div>
							</a>
							<div class="talentDetail">
								<span class="talentTitle">${item.tittle}</span>
								[#if item.ismember == 1] 
									[#if item.state == 2]
										<span class="comment commented">
											专家已点评
										</span>
									[#elseif item.state == 0]
										<span class="comment">
											未点评
										</span>
									[/#if]
								[/#if]
								<p>
									<img src="${item.user.useravatar}" alt="上传者" title="上传者" />
									${item.user.username}
									<span class="time">上传于<i>${(item.createtime).toString("M月dd日")}</i></span>
								</p>
							</div>
						</li>
				[/#list]
			[/#if]
		</ul>
	</div>
</body>
</html>