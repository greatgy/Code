[#ftl]
[#import "/WEB-INF/FtlLib/Macro/Public.ftl" as p]
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>梦之初心--效果检验详情页</title>
	<meta name="Keywords" content="天才人生,效果检验详情页" />
	<meta name="Description" content="天才人生,效果检验详情页" />
	<link rel="stylesheet" href="${basecss}/css/default/index.css">
	<link rel="stylesheet" href="${basecss}/css/default/ckeditor.css" type="text/css">
	<script type="text/javascript" src="${basejs}/js/pages/comment-1.0.0.js"></script>
	<script type="text/javascript" src="${basejs}/js/pages/scroll.js"></script>
	<script type="text/javascript" src="${basejs}/js/libs3/jquery.qqface.min.js"></script>
	<script type="text/javascript" src="${basejs}/js/pages/lifevideocomment.js"></script>
	
	<script type="text/javascript">
		var me = {
			showname: "${me.username!'游客'}",
			useravatar:"${me.useravatar}",
			oid:"${(me.oid?c)!'0'}",
			uid:"${me.uid}",
			defaultImg: "${baseimg}/imgs/default/user.png",
			isuser: "${me.isUser}"
		}
		var fromuid = '${bean.uid}';
		var cid = '${bean.cid}';
		var base = '${base}';
		var baseimg = '${baseimg}';
		var userimg = '${userimg}';
		var channel = 'videocomments';
		var type = 0;
		var href = window.location.href;
		$(function(){
        	$('.face').qqFace({ 
		        assign:'content', //给输入框赋值 
		        path:'${baseimg}/imgs/face/qq/' //表情图片存放的路径 
		    });
		   	$("#hot").click(function(){
		   		$("#displayComment").find("li").remove(); 
				$("#new").removeClass("curjudge");
				$("#hot").addClass("curjudge");
				type=1;
				num = 1;
				loadmore();
			});
			$("#new").click(function(){
				$("#displayComment").find("li").remove(); 
				$("#hot").removeClass("curjudge");
				$("#new").addClass("curjudge");
				type=0;
				num = 1;
				loadmore();
			});
		});
	</script>
	<style type="text/css">
		.qqFace{margin-top:4px;background:#fff;padding:2px;border:1px #dfe6f6 solid;}
		.qqFace table td{padding:0px;}
		.qqFace table td img{cursor:pointer;border:1px #fff solid;}
		.qqFace table td img:hover{border:1px #0066cc solid;}
	</style>
</head>
<body>
	<div class="contentLeft">
		<div class="video">
			<h3>
				${bean.title}
				<span class="uploadTime"><i>上传于</i>${(bean.createtime).toString("YYYY.M.dd")}</span>
				<div class="uploadUser">
					<img src="${bean.user.useravatar}" [#if bean.user.getIsUser()]class="memberUserimg"[/#if] alt="${bean.user.username}" title="${bean.user.username}" />
					[#if bean.user.getIsUser()]<img src="${baseimg}/imgs/default/prince.png" class="princeimg" alt="" />[/#if]
					${bean.user.username}
				</div>
			</h3>
			<div class="playvideo">
				${bean.content}

				<div class="statics">
					<span>
						<img src="/imgs/default/film.png" alt="播放" title="播放" />
						${bean.clickCount}次播放
					</span>
					<span>
						<img src="/imgs/default/report.png" alt="举报" title="举报" />
						举报
					</span>
				</div>
			</div>
		</div>
		<div class="wordbox conWordbox">
			<textarea  id="content" class="comment_textarea"></textarea>
			<div class="wordpiece">
				<a class="face"><img src="${baseimg}/imgs/default/smile.png" alt="" /></a>
				<button class="submitBtn firstedcomments" onclick="submitCommentHandler(this);">发表</button>
				[#if me??]
					<p class="isnick"><input type="checkbox" id="isnick"><label for="isnick">匿名</label></input></p>
				[/#if]	
			</div>
		</div>
		<div class="commentBox">
			<ul class="judgement">
				<li class="curjudge" id="new">最新</li>
				<li id="hot">最热</li>
			</ul>
			<!-- 评论部分 -->
			<ul class="commentList conCommentlist" id="displayComment">
				
			</ul>
			<div class="page"></div>
		</div>
	</div>
	<div class="contentRight">
		<div class="workplaceitem">
			<h3>
				相关视频
			</h3>
			<ul class="relateVideoList">
			[#if relateVideoList??]
				[#list relateVideoList as item]	
						<li>
							<a href="${base}/videoDetail/${cid}/${item.uid}">
								<img class="talentimg" src="${webimg}${item.imgmedium}" alt="${item.title}" title="${item.title}">
								<div class="play">
									<img src="/imgs/default/playbtn.png" alt="播放" title="播放">
								</div>
							</a>
							<div class="talentDetail">
								<div class="videoTitle">${item.title}</div>
								<div class="videoRelates">
									<span class="looktimes">
										<img src="/imgs/default/audience.png" alt="">
										${item.clickCount}人
									</span>
									<span class="relateTime">[@p.mytime datetime="${item.createtimeStr}"/]</span>
								</div>
							</div>
						</li>
				[/#list]
			[/#if]
			</ul>
		</div>
	</div>
</body>
</html>