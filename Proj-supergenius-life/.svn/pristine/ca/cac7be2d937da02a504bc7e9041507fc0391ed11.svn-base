[#ftl]
[#import "/WEB-INF/FtlLib/Macro/Public.ftl" as p]
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>${title!'天才人生'}</title>
	<link rel="stylesheet" href="${basecss}/css/default/index.css">
	<script type="text/javascript" src="${basejs}/js/pages/scroll.js"></script>
	<script type="text/javascript" src="${basejs}/js/pages/history.js"></script>
</head>
<body>
	<div class="contentLeft">
		<!-- 轮播 -->
		<div id="lunbo" class="guideBox">
			<div class="banner">
				<ul id="banner_list">
					[#if bannerList??]
						[#assign bannercount = 0]
						[#list bannerList as item]	
								<li data-index="${bannercount}">
									<a href="${item.url}" class="banneritem" style="background: #000 url(${webimg}${item.content}) no-repeat center center;background-size: 100% 100%;"  title="${item.title}">${item.title}</a>
								</li>
							[#assign bannercount = bannercount + 1]
						[/#list]
					[/#if]
				</ul>
			</div>
			<ul id="controller">
				[#if bannerList??]
					[#assign bannercount = 0]
					[#list bannerList as item]
						<li [#if bannercount == 0]class="active"[/#if]></li>
						[#assign bannercount = bannercount + 1]
					[/#list]
				[/#if]
			</ul>
		</div>
		<ul class="tabBox">
			[#if list??]
				[#list list as article]
					<li>
						<a class="tabitemimg" href="${base}/article/${article.cid}/${(article.oid)?c}" title="${article.title}">
							<img src="${webimg}${article.imgmedium}" alt="${article.title}" title="${article.title}"/>
						</a>
						<div class="tabitemRt">
							<a href="${base}/article/${article.cid}/${(article.oid)?c}" class="articleTitle">
								[#if article.isoriginal == 1]
									<span class="original">[原创]</span>
								[/#if]
								[#if article.kind == 1]
									<span class="videotype">[视频]</span>
								[#elseif article.kind == 2]
									<span class="pictype">[图片]</span>
								[/#if]
								${article.title}
							</a>
							<p class="descripe">
								[#if article.summary==""]
									[@p.TrimSubstring content="${article.content}" mylength=80 /]
								[#else]
									[@p.TrimSubstring content="${article.summary}" mylength=80 /]
								[/#if]
							</p>
							<div class="timepiece">
								<span class="time">
									[@p.mytime datetime="${article.createtimeStr}"/]
								</span>
								<div class="operateBox">
									<a href="${base}/article/${article.cid}/${(article.oid)?c}" class="littleicon">
										<img src="${baseimg}/imgs/default/clickcount.png" />
										${article.clickcount}
									</a>
									<a href="${base}/article/${article.cid}/${(article.oid)?c}" class="littleicon">
										<img src="${baseimg}/imgs/default/heart.png" />
										${article.prizecount}
									</a>
								</div>
							</div>
						</div>
					</li>
				[/#list]
			[/#if]
		</ul>
	</div>
	<div class="contentRight">
		<div class="vdbox">
			[#if adList??]
				[#list adList as item]
					<a href="${item.originurl}"><img src="${webimg}/${item.content}" alt="${item.name}" /></a>
				[/#list]
			[/#if]
		</div>
		<div class="workplaceitem">
			<h3>
				留言区
			</h3>
			<form class="wordbox guideWordbox">
				<textarea placeholder="我要吐槽..."></textarea>
				<div class="wordpiece">
					<a href="#" class="face"><img src="/imgs/default/smile.png" alt=""></a>
					<a href="#" class="face"><img src="/imgs/default/picture.png" alt=""></a>
					<button class="submitBtn">发表</button>
					<div class="hidename">
						<input type="checkbox" id="hideName" />
			    		<label for="hideName">匿名</label>
					</div>
				</div>
			</form>
			<div class="newDiscuss">
				<h4>最新留言</h4>
				<ul class="commentList">
					<li>
						<a href="#" class="userimg">
							<img src="/imgs/default/wuserimg.png" class="img-responsive" alt="">
						</a>
						<div class="commentitemRt">
							<a href="#" class="username">乔治</a>
							<span class="time">1分钟前</span>
							<div class="word">
								这件事情业态为吸纳了吧，这件事情业态为吸纳了吧，这件事情业态这件事情业态为吸纳了
							</div>
							<div class="wordBottom">
								<a href="#" class="reply">
									回复
								</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="" class="openReply">
									17条回复<img src="/imgs/default/littleup.png" alt="">
								</a>
								<a href="#" class="zan">
									<img src="/imgs/default/thumb.png" alt="" title="点赞">
									124
								</a>
							</div>
							<div class="replyBox">
								<textarea placeholder="回复@张三"></textarea>
								<div class="wordpiece">
									<a href="" class="sure">
										确定
									</a>
									<a href="" class="cancle">取消</a>
								</div>
							</div>
							<ul class="replyList">
								<li>
									<a href="#" class="userimg">
										<img src="/imgs/default/defaultimg.png" class="img-responsive" alt="">
									</a>
									<div class="commentitemRt">
										<a href="#" class="username">马克</a>
										<span class="time">1分钟前</span>
										<div class="word">
											这件事情业态为吸纳了吧，这件事情业态为吸纳了吧，这件事情业态这件事情业态为吸纳了
										</div>
										<div class="wordBottom">
											<a href="#" class="reply">
												回复
											</a>
											<a href="#" class="zan">
												<img src="/imgs/default/thumb.png" alt="" title="点赞">
												124
											</a>
										</div>
										<div class="replyBox">
											<textarea placeholder="回复@张三"></textarea>
											<div class="wordpiece">
												<a href="" class="sure">
													确定
												</a>
												<a href="" class="cancle">取消</a>
											</div>
										</div>
									</div>
								</li>
							</ul>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>
	
	<script type="text/javascript">
		$(function(){
			$.fn.scrollHandle({
				obj: window,
				fun: loadmore
			})
		})
		
		var prePage = 2;
		var pagenum = 3;
		// 加载更多文章
		function loadmore() {
			var	url = "${base}/ajax/otherpage/catalogue/${cid}";
			if(prePage != pagenum) {
			    prePage = pagenum;
				$.get(url, {pagenum:pagenum}, function(data){
					if(data.trim() == ""){// 没有更多内容
						$(window).unbind("scroll", defaultScrollHandler);
						return false;
					}
					$(".tabBox").append(data);
					history_num = pagenum;
					pagenum+=1;
				});
			}
		}
	</script>
</body>
</html>