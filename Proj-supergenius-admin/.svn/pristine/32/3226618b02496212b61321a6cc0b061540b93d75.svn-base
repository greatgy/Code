         <bean id="everyhourCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		 <property name="jobDetail" ref="everyhourJobDetail" />
		<!-- 	每天凌晨三点执行 -->
		 <!-- <property name="cronExpression" value="0 0 3 * * ?" /> -->
		 <!-- 	每小时执行一次 -->
		<property name="cronExpression" value="0 0 * * * ?" />
		<!-- 	测试每分钟执行一次 -->
<!-- 		<property name="cronExpression" value="0 * * * * ?" /> -->
		<!-- 	测试每10分钟执行一次 -->
<!-- 		<property name="cronExpression" value="0 0/10 * * * ?" /> -->
	    </bean>  

	<bean id="everydayCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="everydayJobDetail" />
		<!-- 	每天凌晨三点执行 -->
		<property name="cronExpression" value="0 0 3 * * ?" /> 
		<!-- 	测试每分钟执行一次 -->
		<!-- 	测试每10分钟执行一次 -->
		<!-- <property name="cronExpression" value="0 0/10 * * * ?" /> -->
	</bean>
	
<!-- 	<bean id="everymonthCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean"> -->
	<!--  	<property name="jobDetail" ref="everymonthJobDetail" />-->
		<!-- 	每个月最后一天 23：30 -->
	<!-- 	<property name="cronExpression" value="0 30 23 L * ?" /> -->
		<!-- 	测试每分钟执行一次 -->
		<!--<property name="cronExpression" value="0 * * * * ?" /> -->
<!-- 	</bean> -->


	 <!-- 0  0    *   *   *  ？
	             秒  分钟     小时     天     月    周几
	             
		0 代表具体时间，即0分0秒
		*代表每的意思，即每月每天每小时
		？代表不确定 -->

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
	    <property name="triggers">
	        <list>
	            <ref bean="everyhourCronTrigger" />
	            <ref bean="everydayCronTrigger" />
	          <!--   <ref bean="everymonthCronTrigger" /> -->
	        </list>
	    </property>
	</bean>
</beans>