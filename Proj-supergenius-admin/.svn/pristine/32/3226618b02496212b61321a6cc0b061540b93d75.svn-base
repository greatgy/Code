<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="userRemindPayHP" class="com.supergenius.server.timer.UserRemindPayExecuter"></bean>
	<bean id="updateAppJudgeHP" class="com.supergenius.server.timer.UpdateAppJudgeExecuter"></bean>
	<bean id="updateAppExpertHP" class="com.supergenius.server.timer.UpdateAppExpertExecuter"></bean>
	<bean id="updateReplyStageHP" class="com.supergenius.server.timer.UpdateReplyStageExecuter"></bean>
	<bean id="UpdateFinanceArticle" class="com.supergenius.server.timer.UpdateFinanceArticleExecuter"></bean>
	<bean id="everyhourHandler" class="com.genius.server.timer.Handler">
		<property name="executers">
			<list>
				<!--<ref bean="judgementConfirmExecuter"/>-->
				<ref bean="UpdateFinanceArticle"/>
			</list>
		</property>
	</bean> 
	
	<bean id="everydayHandler" class="com.genius.server.timer.Handler">
		<property name="executers">
			<list>
				<ref bean="userRemindPayHP"/>
				<ref bean="updateAppJudgeHP"/>
				<ref bean="updateAppExpertHP"/>
				<ref bean="updateReplyStageHP"/>
			</list>
		</property>
	</bean>
	
	<!-- <bean id="luceneHandler" class="com.genius.server.timer.Handler">
		<property name="executers">
			<list>
				<ref bean="luceneIndexExecuter"/>
			</list>
		</property>
	</bean>
	
	<bean id="everymonthHandler" class="com.grandgenius.timer.Handler">
		<property name="executers">
			<list>
				<ref bean="PkUserLevelExecuter"/>
			</list>
		</property>
	</bean>-->

	<bean id="everyhourJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="everyhourHandler" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="false" />
	</bean> 

	<bean id="everydayJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="everydayHandler" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="false" />
	</bean>

	<!--<bean id="everymonthJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
