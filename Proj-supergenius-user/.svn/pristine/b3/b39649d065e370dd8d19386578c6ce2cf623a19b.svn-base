html {
	background-color: #eee;
}
.wraper * {
    font-family: "Microsoft Yahei";
}
.container {
	width: 100%;
    background-color: #eee;
}
.main_top {
	background-color: #fff;
    text-align: left;
}
.main_top h4 {
	width: 1000px;
    padding: 10px;
    font-size: 17px;
    font-weight: bold;
    color: #737373;
    letter-spacing: 1px;
}
.logoimg {
	margin-right: 10px;
    width: 150px;
    height: 50px;
    overflow: hidden;
    vertical-align: middle;
}
.main {
    margin: 20px auto 0;
    padding-bottom: 20px;
    width: 1000px;
    text-align: left;
}
.orderSection {
	width: 95%;
    height: 30px;
    line-height: 30px;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
}
.orderSection .tip {
	display: inline-block;
    font-size: 16px;
    font-weight: bold;
    color: #252525;
}
.orderSection .money {
	display: inline-block;
    float: right;
    padding-right: 5%;
    font-size: 15px;
    font-family: "宋体";
}
.money .pay {
	margin: 0 5px;
    display: inline-block;
    font-size: 18px;
    font-weight: bold;
    color: red;
}
.orderDetails {
	width: 95%;
    margin: 15px auto 20px;
    font-size: 14px;
    color: #656565;
}
.orderDetails span {
	display: inline-block;
	min-width: 48%;
	max-width: 100%;
    line-height: 22px;
    overflow: hidden;
    height: 22px;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.wxpaySection {
	width: 95%;
    padding: 20px 2.5% 60px;
    background-color: #fff;
    box-shadow: 0 0 8px 0 #D2D2D2;
    border-radius: 6px;
}
.wxpaySection h3 {
	margin-bottom: 15px;
    font-size: 18px;
    height: 25px;
    line-height: 25px;
    overflow: hidden;
}
.wxpaySection .redmind {
    margin-left: 56px;
    color: red;
    font-size: 13px;
    font-family: "宋体";
}
.redmind .refresh {
    margin: 2px;
    color: #14B6EC;
}
.codeSection {
	width: 72%;
    text-align: left;
    overflow: hidden;
}
.codeleft {
	display: inline-block;
    margin-right: 5%;
    vertical-align: top;
    width: 45%;
}
.coderight {
	display: inline-block;
    vertical-align: middle;
    width: 49%;
}
.codeleft .wxcode {
	width: 305px;
	height: 305px;
	overflow: hidden;
}
.codeleft .paytip {
	margin-top: 20px;
	width: 300px;
	height: 60px;
	overflow: hidden;
}
.coderight .teachstep {
	width: 320px;
	height: 400px;
	overflow: hidden;
}
.copyright {
    margin: 60px auto 40px;
    padding-top: 50px;
    text-align: center;
    font-size: 14px;
    color: #6D6D6D;
    letter-spacing: 1px;
    border-top: 1px solid #ddd;
}