</head>
<body>
		<div class="container" id="user_sn">
			<div class="main">
				<div class="topcommon">
					<img src="${baseimg}/imgs/default/findpw01.png" alt="" />
					<h2>从这里，找到更好的自己！${addtime!'ok'}</h2>
				</div>
				<div class="midcommon">
					<h3>
						<img src="${baseimg}/imgs/default/login_logo.png" alt="" /> 
						通过注册邮箱找回密码
					</h3>
					<div class="mainmid">
						<form id="reset_form" action="${base}/resetpwd/step2" method="post">
							<ul class="mailist">
								<li>
									<label for="txtusersn"><i>*</i>会员号</label>
									<input type="text" placeholder="输入会员号" class="mail" isnotempty="不能为空" id="txtusersn" ajaxvalid="${base}/ajax/user/usersnvalid|该用户不存在|请输入会员号" name="usersn" value="${usersn}" />
									<div id="email" class="msg-box">
										<div id="focustxtusersn" class="msg-weak msg-prompt hd">
											<i></i>
											<span>请输入您的会员号</span>
										</div>
										[#if not_exist??]
										<div id="errtxtusersn" class="msg-weak msg-error">
                                            <i></i>
                                            <span id="errmsgtxtusersn"> 该用户不存在</span>
                                        </div>
										[#else]
										<div id="errtxtusersn" class="msg-weak msg-error hd">
                                            <i></i>
                                            <span id="errmsgtxtusersn"></span>
                                        </div>
                                        [/#if]
										<div id="oktxtusersn" class="msg-weak msg-correct hd">
											<i></i>
											<span></span>
										</div>
									</div>
								</li>
								<li>
									<label for="txtemail"><i>*</i>注册邮箱</label>
									<input type="text" placeholder="输入注册邮箱" isemail="邮箱格式错误" isnotempty="不能为空" class="mail" id="txtemail" name="email" value="${email}" />
									<div id="email" class="msg-box">
										<div id="focustxtemail" class="msg-prompt hd">
											<i></i>
											<span>请输入您的注册邮箱</span>
										</div>
										[#if err_user_password_no_match_usersn??]
										<div id="errtxtemail" class="msg-error">
											<i></i>
											<span id="errmsgtxtemail">会员号与邮箱不匹配</span>
										</div>
										[#else]
										<div id="errtxtemail" class="msg-error hd">
                                            <i></i>
                                            <span id="errmsgtxtemail"></span>
                                        </div>
										[/#if]
										<div id="oktxtemail" class="msg-correct hd">
											<i></i>
											<span></span>
										</div>
									</div>
								</li>
							</ul>
							<a id="submit" class="submit" href="javascript:;">找回密码</a>
							<a href="javascript:;" class="idways" id="idways">根据身份证找回密码</a>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div class="container" id="user_identity" style="display:none;">
            <div class="main">
                <div class="topcommon">
                    <img src="${baseimg}/imgs/default/findpw01.png" alt="" />
                    <h2>从这里，找到更好的自己！</h2>
                </div>
                <div class="midcommon">
                    <h3>
                        <img src="${baseimg}/imgs/default/login_logo.png" alt="" /> 
                        通过注册邮箱找回密码
                    </h3>
                    <div class="mainmid">
                        <form action="${base}/resetpwd/step2_1" id="reset_form_id" method="post">
                            <ul class="mailist">
                                <li>
                                    <label for="txtuserid"><i>*</i>身份证号</label>
                                    <input type="text" placeholder="输入身份证号" class="mail" id="txtuserid" isidentityid="身份证格式错误" isnotempty="不能为空" name="identityid" value="${identityid}"/>
                                    <div id="email" class="msg-box">
                                        <div id="focustxtuserid" class="msg-weak msg-prompt hd">
                                            <i></i>
                                            <span>请输入您的身份证号</span>
                                        </div>
                                        [#if not_exist_1??]
                                        <div id="errtxtuserid" class="msg-weak msg-error">
                                            <i></i>
                                            <span id="errmsgtxtuserid">该用户不存在</span>
                                        </div>
                                        [#else]
                                        <div id="errtxtuserid" class="msg-weak msg-error hd">
                                            <i></i>
                                            <span id="errmsgtxtuserid">不能为空</span>
                                        </div>
                                        [/#if]
                                        <div id="oktxtuserid" class="msg-weak msg-correct hd">
                                            <i></i>
                                            <span></span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <label for="txtusersn"><i>*</i>姓名</label>
                                    <input type="text" placeholder="输入姓名" class="mail" id="txtusername" isnotempty="不能为空" name="name" value="${name}" />
                                    <div id="email" class="msg-box">
                                        <div id="focustxtusername" class="msg-weak msg-prompt hd">
                                            <i></i>
                                            <span>请输入您的姓名</span>
                                        </div>
                                        [#if err_name??]
                                        <div id="errtxtusername" class="msg-weak msg-error">
                                            <i></i>
                                            <span id="errmsgtxtusername">姓名与身份证号不匹配</span>
                                        </div>
                                        [#else]
                                        <div id="errtxtusername" class="msg-weak msg-error hd">
                                            <i></i>
                                            <span id="errmsgtxtusername">不能为空</span>
                                        </div>
                                        [/#if]
                                        <div id="oktxtusername" class="msg-weak msg-correct hd">
                                            <i></i>
                                            <span></span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <label for="txtemail"><i>*</i>注册邮箱</label>
                                    <input type="text" placeholder="输入注册邮箱" class="mail" isemail="邮箱格式错误" id="txtemail_1" isnotempty="不能为空" name="email_1" value="${email_1}" />
                                    <div id="email" class="msg-box">
                                        <div id="focustxtemail_1" class="msg-prompt hd">
                                            <i></i>
                                            <span>请输入您注册时填写的邮箱账号</span>
                                        </div>
                                        [#if err_email??]
                                        <div id="errtxtemail_1" class="msg-error">
                                            <i></i>
                                            <span id="errmsgtxtemail_1">邮箱与该用户不匹配</span>
                                        </div>
                                        [#else]
                                        <div id="errtxtemail_1" class="msg-error hd">
                                            <i></i>
                                            <span id="errmsgtxtemail_1">不能为空</span>
                                        </div>
                                        [/#if]
                                        <div id="oktxtemail_1" class="msg-correct hd">
                                            <i></i>
                                            <span></span>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <a class="nextsubmit" id="submit_id" href="javascript:">下一步</a>
                            <a href="javascript:;" class="idways" id="snways">根据会员号找回密码</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="msg_page" value="${msg_page!true}"/>
</body>
</html>