[#ftl]
<!DOCTYPE html>
<html>
<head>
	<title>会员注册第三步--基本信息</title>
	<meta name="Keywords" content="会员中心，会员注册第一步，基本信息" />
	<meta name="Description" content="会员中心，会员注册第一步，基本信息" />
	<script type="text/javascript" src="${basejs}/js/libs/validator-1.0.0.js"></script>
	<link rel="stylesheet" type="text/css" href="${basecss}/css/default/register.css">
	<script type="text/javascript">
<!--
			$(function(){
			var regs = {
			isnum : /^.*[0-9]+.*$/,
			islish: /^.*[A-Za-z]+.*$/,
			issign: /^.*[_\!\.@#\$%\^&\*\(\)\[\]\\?\\\/\|\-~`\+\=\,\r\n\:\'\"。，；……！￥\{\}·]+.*$/
			};
