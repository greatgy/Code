.banner{width: 100%; height: 207px; background: #dfdfdf}
.banner .banS {width: 100%;height: 100%; margin: 0px auto; overflow: hidden;}
.banner .banS img{ 	height: 100%;  width: 100%}

.main{ width: 1000px;height: auto; margin: 20px auto 30px; overflow: hidden;  background: #f0f0f0}
.main_m{ width: 100%;  height: auto; overflow: hidden;background: #f0f0f0}


/*左边*/
.main .left{ width:690px; height: auto;}

/*轮播图*/
.main .left .ma{ width:690px; height:470px; position:relative;border-bottom: 1px solid #AEAEAE;}
.main .left .ma .ma_pre{position:absolute;top:80px; left:0px;}
.main .left .ma .ma_next{position:absolute;top:80px; right:0px;}
.main .left .ma .ma_bot{position:absolute;bottom:1px; height:80px;}
.main .left .ma .ma_bot .ma_one{width:171px;  height:80px;float:left; border:1px solid #000;}
/*论战进行时*/
.left .blockgroup { 
	width: 652px;
	background: #fff;
	padding: 0 19px;
	padding-bottom: 20px;
	padding-top: 5px;
	margin-top: 15px;
	overflow: hidden;
	border-bottom: 1px solid #c6c6c6;
	box-shadow: 1px 0 1px 0 #C6C6C6;
}
.blockgroup .mb{ 
	width: 650px;
	border-left: 3px solid #1d71b6;
	height: 20px;
	margin: 10px auto 15px;
	color: #1d71b6;
	text-align: left;
	font-weight: bold;
	font-size: 17px;
	line-height: 20px;
}
.left .mc{ 
	width: 100%;
 	height: 338px;
  	position: relative;
}
.mc .debateimg_lg { 
	width: 652px;
	height: 100%;
	overflow: hidden;
}
.mc .mc_2 { 
	width: 100%;
	background: #000;
	opacity: 0.5;
	filter:alpha(opacity=50);
	height: 50px;
	position:absolute;
	line-height: 50px;
	bottom:0;
}
.mc .debateTit { 
	display: block;
	width: 100%;
	height: 50px;
	color: #fff;
	position: absolute;
	bottom: 0;
	line-height: 50px;
	font-size: 16px;
	text-align: left;
	padding-left: 15px;
}
.mc .debateTit:hover { 
	color: #ddd;
}
.debateblock .md { 
	overflow: hidden;
	position: relative;
}
.md .md_1 { 
	width: 482px;
	font-size: 16px;
	left: 73px;
	text-align: center;
	margin-top: 20px;
}
.md_1 .vstitle { 
	display: inline-block;
	max-width: 215px;
	color: #333;
	min-height: 22px;
	line-height: 22px;
	overflow: hidden;
	vertical-align: top;
}
.md_1 .redtitle {
	text-align: right;
}
.md_1 .bluetitle {
	text-align: left;
}
.md_1 img {
	width: 36px;
	height: 25px;
	overflow: hidden;
}
.md .votestatus {
	text-align: left;
}
.votestatus span {
	display: inline-block;
	width: 55px;
	height: 80px;
	overflow: hidden;
	text-align: center;
	font-size: 15px;
	font-weight: bold;
}
.votestatus .redside {
	color: #d90000;
	margin-right: 20px;
	margin-left: 5px;
}
.votestatus .blueside {
	color: #0077d9;
	margin-left: 20px;
}
.votestatus span img {
	width: 55px;
	height: 55px;
	overflow: hidden;
}
.votestatus .progress {
	width: 482px;
	height: 6px;
	display: inline-block;
	vertical-align: top;
	margin-top: 25px;
	padding-bottom: 2px;
	text-align: left;				
}
.progress .redbar , .progress .bluebar {
	height: 6px;
	display: inline-block;
	float: left;
	border-radius: 5px;
}
.progress .redbar {
	width: 40%;
	background: #d90000;
}
.progress .bluebar {
	width: 60%;
	background: #0077d9;
}
.join {
	display: inline-block;
	width: 102px;
	height: 35px;
	background: #7ecef4;
	line-height: 35px;
	text-align: center;
	border-radius: 5px;
	box-shadow: 1px 1px 0 1px #8EB5C7;
	position: absolute;
	bottom: 4px;
	left: 260px;
	color: #3f4f58;
}
.join:hover {
	background: #3fc1ff;
}
.debateblock {
	border-bottom: 1px dotted #D9D7D7;
	padding-bottom: 15px;
}
/* 醒示警语部分 */
.left .recommend {
	margin: -15px auto 15px;
}
.recommend .mb {
	margin-top: 25px;
}
.recommendArticle {
	text-align: left;
}
.recommendArticle .articleimg {
    width: 170px;
    height: 105px;
    overflow: hidden;
}
.recommendArticle .articleright {
	display: inline-block;
	margin-left: 15px;
    width: 460px;
    vertical-align: top;
}
.recommendArticle .articlelink {
	display: inline-block;
	line-height: 24px;
    font-size: 18px;
    font-weight: bold;
    font-family: "华文细黑";
    color: #000000;
    max-height: 26px;
    overflow: hidden;
}
.recommendArticle .articlelink:hover {
	color: #1d71b6;
    font-weight: bold;
}
.articleright .newestgoldlanguagecontent {
	margin-top: 5px;
    max-height: 67px;
    overflow: hidden;
	font-size: 16px;
    color: #7b7b7b;
    line-height: 22px;
}
/*热门话题*/
.hotipicblock {
	text-align: left;
	overflow: hidden;
	padding-top: 5px;
	padding-bottom: 15px;
	border-bottom: 1px dotted #D9D7D7;
}
.hotipicblock .mb_a img {
	width: 250px;
	height: 190px;
	overflow: hidden;
	box-shadow: 0 1px 0 1px #ddd;
}
.hotipicblock .me{
	width: 385px;
	display: inline-block;
	overflow: hidden;
	vertical-align: top;
	margin-left: 8px;
}
.me h4 {
	font-size: 16px;
	height: 21px;
	line-height: 21px;
	overflow: hidden;
	margin-bottom: 15px;
}
.me h4 a {
	font-size: 16px;
	color: #333333;
}
.me h4 a:hover {
	color: #1d71b6;
}
.me .topicjudge {
	height: 160px;
	overflow: hidden;
}
.topicjudge li {
	margin-bottom: 10px;
}
.topicjudge .userpicture {
	width: 38px;
	height: 38px;
	border: 2px solid #1d71b6;
	overflow: hidden;
	border-radius: 4px;
}
.topicjudge .judgers {
	display: inline-block;
	width: 335px;
	margin-left: 3px;
	vertical-align: top;
	overflow: hidden;
}
.judgers .name {
	font-size: 14px;
	font-weight: bold;
	color: #1d71b6;
}
.judgers .name:hover {
	color: #3fc1ff;
}
.judgers .time {
	font-size: 12px;
	color: #959595;
	float: right;
	margin-top: 3px;
}
.judgers .points {
	max-height: 21px;
	font-size: 14px;
	color: #636363;
	overflow: hidden;
	line-height: 22px;
}
.judgers .points img {
	margin: 0 2px;
	vertical-align: top;
	width: 20px;
    height: 20px;
    overflow: hidden;
}

/*推荐文章*/
.left .mf { 
	width: 655px;
	height: 158px;
	border-bottom: 1px dotted #D9D7D7;
	padding-bottom: 20px;
}
.mf .mf_1{ 
	width: 210px; 
	height: 100%; 
	float: left;
}
.mf .mf_2{ 
	width: 210px; 
	height: 100%;
	float: left; 
}
.mf .mf_a{ 
	position: relative;
	overflow: hidden;
	box-shadow: 1px 1px 1px 0 #3C3C3C;
	margin-right: 8px;
}
.mf_a img{ 
	width: 100%;
	height: 100%
}
.mf_a .mf_bg{
	cursor: pointer;
	width: 100%;
	height: 30px;
	position: absolute;
 	z-index: 100;
	background: #000;
	opacity: 0.5;
	filter:alpha(opacity=50);
	left: 0px;
	bottom: 0;
}
.mf_bg p{ 
	color: #fff
}
.mf_a .p1{ 
	font-size: 0.9em;
	font-weight: 600;
	line-height:30px;
	position: absolute;
	bottom: 0;
	height: 30px;
	z-index: 101;
	width: 190px;
	padding: 0 10px;
	text-align: center;
}
.p1 a {
	color: #fff;
	display: block;
}

/*最新文章*/
.newartblock {
	padding-top: 10px;
}
.newartblock .mg{ 
	width: 100%;
	text-align: left;
}
.mg .focusbox {
	width: 318px;
	display: inline-block;
	overflow: hidden;
	height: 192px;
	line-height: 20px;
	margin-bottom: 15px;
	margin-right: 5px;
	border-bottom: 1px dotted #d9d7d7;
	padding-bottom: 20px;
}
.focusbox p {
	font-size: 16px;
	overflow: hidden;
}
.focusbox .p1 {
	color: #1d71b6;
}
.focusbox .p1:hover {
	color: #3fc1ff;
}
.focusbox .p2 {
	font-weight: bold;
	color: #999999;
	margin-left: 10px;
	font-size: 14px;
}
.focusbox .focuslist {
	margin-top: 13px;
}
.focuslist li {
	margin-bottom: 6px;
}
.focuslist li img {
	width: 60px;
	height: 43px;
	overflow: hidden;
}
.focuslist .articleTit {
	color: #1A1A1A;
	font-size: 15px;
	vertical-align: top;
	max-height: 40px;
	line-height: 20px;
	overflow: hidden;
	display: inline-block;
	width: 245px;
	margin-left: 3px;
}
.focuslist .articleTit:hover {
	color: #1d71b6;
}


/*右边*/
.main .right { 
	width: 295px;
	height: auto;
	padding-right: 1px;
}








