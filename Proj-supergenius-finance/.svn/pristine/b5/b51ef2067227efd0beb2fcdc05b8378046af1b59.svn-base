.wordbox {
    margin-top: 25px;
}
.wordbox textarea {
	padding: 15px;
    width: 100%;
    height: 160px;
    border: 1px solid #ff8800;
    resize: none;
    line-height: 22px;
    font-size: 1rem;
    color: #333333;
}
.wordpiece {
    margin: 5px 5px 40px;
}
.face {
    display: inline-block;
    margin-right: 5px;
    width: 40px;
    height: 40px;
    overflow: hidden;
}
.face img {
	width: 100%;
    height: 100%;
    overflow: hidden;
}
.submitBtn {
    float: right;
    margin-top: 8px;
    width: 80px;
    height: 35px;
    background: #ff8800;
    border-radius: 8px;
    color: #fafafa;
    font-size: 1.2rem;
    letter-spacing: 1px;
    text-align: center;
}
.submitBtn:hover {
	background: #ff6600;
}
.commentBox h4 {
	padding-bottom: 15px;
    font-size: 1rem;
    color: #333;
    border-bottom: 1px solid #ddd;
}
.commentList li {
	padding-top: 20px;
	padding-bottom: 15px;
	border-bottom: 1px solid #ddd;
}
.userimg {
    display: inline-block;
    margin-right: 1%;
    width: 5%;
    overflow: hidden;
    vertical-align: top;
    padding: 2px;
}
.userimg img {
    width: 100%;
    height: auto;
    overflow: hidden;
    border-radius: 50%;
}
.commentitemRt {
    display: inline-block;
    width: 93%;
    margin-top: 5px;
    overflow: hidden;
}
.username {
    font-size: 1rem;
    color: #ff6600;
}
.word {
    margin: 10px 0 15px;
    line-height: 20px;
    font-size: 0.94rem;
    color: #333;
}
.pictureBox {
    margin: 15px 0;
}
.pictureBox img {
	margin: 0 1% 0 0;
    width: 20%;
    height: auto;
    overflow: hidden;
    max-height: 112px;
}
.wordBottom {
	margin-bottom: 5px;
    height: 25px;
    line-height: 25px;
}
.time {
    font-size: 0.8rem;
    color: #878585;
}
.commentOperate {
    display: inline-block;
    float: right;
    padding-right: 1%;
    overflow: hidden;
    width: 60%;
    text-align: right;
}
.commentOperate a {
	margin-left: 5%;
    font-size: 0.98rem;
    color: #676767;
    line-height: 20px;
    overflow: hidden;
    display: inline-block;
}
.commentOperate a img {
	margin-top: -5px;
	width: 25px;
    height: 20px;
    overflow: hidden;
    vertical-align: middle;
}
.commentOperate .openReply {
    color: #1a3b9c;
    font-size: 0.9rem;
}
.openReply img {
    width: 20px;
    height: 20px;
    overflow: hidden;
    vertical-align: middle;
    margin-left: 4px;
}
.replyBox {
    margin: 10px auto;
}
.replyBox textarea {
	border: 1px solid #ff8800;
    width: 99%;
    padding: 8px 15px;
    height: 80px;
    resize: none;
    font-size: 0.94rem;
    color: #333;
}
.replyBox .submitBtn {
    margin-right: 8px;
    width: 60px;
    height: 30px;
    font-size: 1rem;
}
.replyList li {
	border-top: 1px solid #ddd;
    padding-top: 20px;
    padding-bottom: 5px;
    border-bottom: none;
}
.replyList .reply {
	color: #1a3b9c;
}
.replyBox .wordpiece {
	margin: 5px 5px 0;
}
.word a {
    font-size: 0.94rem;
    color: #333;
}

@media screen and (max-width: 767px) {
    .wordbox {
        margin-top: 0;
    }
    .userimg {
        display: none;
    }
    .commentitemRt {
        width: 100%;
    }
    .replyList .commentitemRt {
        margin-left: 6%;
    }
}
