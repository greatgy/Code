package com.supergenius.web.finance.controller;

import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.genius.server.base.controller.BaseController;
import com.supergenius.xo.finance.entity.SearchResult;
import com.supergenius.xo.finance.service.SearchSO;

/**
 * 搜索控制器，负责查询的相关请求
 * @author ShangJianguo
 */
@Controller
public class SearchController extends BaseController{

	@Autowired
	private SearchSO so;
	
	/**
	 * 跳转到搜索页面
	 * @param model
	 * @param request
	 * @return
	 * @author ShangJianguo
	 */
	@RequestMapping(value = "search", method = RequestMethod.GET)
	public String search(Map<String, Object> model, HttpServletRequest request){
		cloneParamsToModel(model, request);
		return "search";
	}
	
	/**
	 * 进行搜索查询
	 * @param keyword
	 * @param channel
	 * @return
	 * @author ShangJianguo
	 */
	@ResponseBody
	@RequestMapping(value = "ajax/search", method = RequestMethod.GET)
	public List<SearchResult> search_ajax(String keyword, String channel){
		if (channel != null) {
			List<SearchResult> list = so.search(keyword, channel);
			return list;
		}
		return null;
	}

}
