[#ftl]
[#import "/WEB-INF/FtlLib/Macro/FinanceRank.ftl" as f]
<!DOCTYPE html >
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>${title!'论战'}</title>
    <link rel="stylesheet" href="${basecss}/css/default/pages/debate.css"/>
    <script type="text/javascript" src="${basejs}/js/pages/fixed.js"></script>
    <script type="text/javascript" src="${basejs}/js/libs/scroll.js"></script>
    <script type="text/javascript" src="${basejs}/js/libs3/jquery.qqface.min.js"></script>
    <script src="${basejs}/js/libs/timeago-1.0.0.js"></script>
    <style type="text/css">
    
    </style>
    <script type="text/javascript">
	<!--
		var FINANCE_PAGE =
			{
				pagenum:1,
				url:"${base}/ajax/debate/${bean.uid}"
			};
		var nomore = false;
		$(function($) {
			// 注册事件
			$("#loading").ajaxStart(function(){
				$(this).show();
			})
			$("#loading").ajaxStop(function(){
				$(this).hide();
			})
			$.fn.scrollHandle({
				obj: window,
				fun: loadmore
			})
			//$(".loadmore").click(loadmore);
			initPage();
		});
		
		// 加载更多事件处理
		function loadmore() {
			if(nomore) {
				$(".loadmore").html("没有更多评论");
				return;
			}
			var pagenum = FINANCE_PAGE.pagenum +　1;
			var url = FINANCE_PAGE.url;
			$.get(url, {pagenum:pagenum}, function(data){
				if(data.trim() == ""){// 没有更多内容
					return;
				}
				FINANCE_PAGE.pagenum += 1;
				$(".lz_main").append(data);
				hoverBind();
			});
		}
		
		function replaceContent(str) {
			str = str.replace(/\[em_([0-9]*)\]/g,'<img src="' + g.baseimg + '/imgs/face/qq/$1.gif" border="0" />');
			return str;
		}

		/*生成页面表情*/
		function initPage() {
			$(".comments").each(function(){
				var content = replaceContent($(this).html());
				$(this).html(content);
			});
		}
	//-->
	</script>
</head>
<body>
<div class="centerbox">
	<div class="topic_07_box">
		<div class="tp_07_left">
			<div class="tp_01_one">
			[#if bean??]
				<a href="${base}/debate/${bean.oid?c}" target="_blank" class="debatebg"><img src="${webimg}${bean.imgoriginal}" /></a>
				<span class="contro_icon">${bean.periods}</span>
	            <div class="lz_one_01">
	                <a href="${base}/debate/${bean.oid?c}" title="${bean.title!''}" target="_blank">[@f.TrimSubstring content="${bean.title!''}" mylength=30 /]<img src="${baseimg}/imgs/default/go.png" /></a>
	            </div>
	            [#if bean.countblue+bean.countred==0]
	    			[#assign redper=0.5]
	    		[#else]
	    			[#assign redper=bean.countred/(bean.countblue+bean.countred)]
	    		[/#if]
    			[#assign blueper=(1-redper)]
	            <div class="lz_one_02 over_title" style="width:${redper*80 + 10}%" title="${redper*100 + '%: ' + bean.titlered}">${bean.titlered}</div>
	            <div class="lz_one_03 over_title" style="width:${blueper*80 + 10}%" title="${blueper*100 + '%: ' + bean.titleblue}">${bean.titleblue}</div>
	        [/#if]
			</div>
			<div class="tp_01_two">
				<div class="mb">
					&nbsp;&nbsp;往期回顾
				</div>
	            <div class="lz_main"  id="lz_main">
	            	[#if list??]
		            	[#list list as item]
		            		<div class="main01" style="background:url('${webimg}${item.imgoriginal}') no-repeat center center" >
			                	<a class="yc" href="${base}/debate/${item.oid?c}" title="${item.title!''}" target="_blank">
			                		[@f.TrimSubstring content="${item.title!''}" mylength=20 /]
				                	<img src="${baseimg}/imgs/default/lzh1_jt.png">
			                	</a>
		                	</div>
		                [/#list]
	                [/#if]
	            </div>
	            [#if list?? && list?size > 8]
	            	<a href="javascript:void(0);" class="lookall loadmore hd">查看全部论战</a>
	            	<div class="loading" id="loading" style="display:none">
						<img src="${baseimg}/imgs/default/loading.gif" />
						loading...
					</div>
     	  		[/#if]
			</div>
		</div>
		<!--右侧 开始-->
		<div class="tp_07_right">
	        <div class="ranklist">
	          <h4>发起论战</h4>
	          <p class="detail">如果您希望发起新论战，或希望将自己的观点以文章的形式发表在某一期论战中，请点击“投稿”按钮，并在稿件中说明。谢谢您的支持！</p>
	        </div>
	        <!- 论战发言榜 -->
			<div class="ranklist">
				<h4>论战发言榜</h4>
				<ul class="statelist">
					[#list list2 as item]
						[#assign users=item?keys /]
						[#assign counts=item?values /]
						[#list users as user]
							<li>
								[#if user.oid == me.oid]
									[#assign url="${base}/my/article" /]
									[#assign name="${user.showname}" /]
								[#elseif user.oid != 0]
									[#assign url="${base}/his/article/${user.oid?c}" /]
									[#assign name="${user.showname}" /]
								[#else]
									[#assign url="javascript:void(0);" /]
									[#assign name="游客" /]
								[/#if]
								<a href="${url}" target="_blank">
									[#if user.avatar??]
						            	<img src="${userimg}${user.avatar!''}" />
						            [#else]
						           		<img src="${baseimg}/imgs/web/noavatar.png" />
						            [/#if]
								</a>
								<a href="${url}" target="_blank">${name}</a>
								<span>
									<img src="${baseimg}/imgs/default/msgimg.png" />
									${counts[user_index]}
								</span>
							</li>
						[/#list]
					[/#list]
				</ul>
			</div>
			<!- 最新发言 -->
			<div class="ranklist">
				<h4>最新发言</h4>
				<div class="wordslist">
					<div class="sdot"></div>
					<ul class="newords">
						[#list newestcomments as item]
							[#if item.bean.fromuseroid == me.oid]
								[#assign url="${base}/my/article" /]
								[#assign name="${item.bean.fromusername}" /]
							[#elseif item.bean.fromuseroid != 0]
								[#assign url="${base}/his/article/${item.bean.fromuseroid}" /]
								[#assign name="${item.bean.fromusername}" /]
							[#else]
								[#assign url="javascript:void(0);" /]
								[#assign name="游客" /]
							[/#if]
							<li>
								<span class="circledot"></span>
								<div class="wordright">
									<div class="justtime">
										<time>${item.bean.createtimeStr}</time>
									</div>
									<div class="nameimg">
										<a href="${url}" target="_blank">
											<img [#if item.bean.fromUser.avatar??] src="${userimg}${item.bean.fromUser.avatar}"[#else]src="${baseimg}/imgs/web/noavatar.png"[/#if] />
										</a>
										[#if item.bean.fromuseroid != 0]
										<a href="${url}" target="_blank">
											${name}
										</a>
										[#else]
										<a href="${url}" target="_blank" style="font-size: 14px; color: #1d71b6;">
											${name}
										</a>
										[/#if]
									</div>
									<p class="comments"> 
										${item.bean.content}
									</p>
									<div class="source">
										来自论战：<a href="${base}/debate/${(item.debate.oid?c)!'0'}" target="_blank">[@f.TrimSubstring content="${item.debate.title}" mylength=13 /]</a>
									</div>
								</div>
							</li>
						[/#list]
					</ul>
				</div>
			</div>
			<!- 论战排行榜 -->
			<div class="ranklist">
	  			<h4>论战排行榜</h4>
	  			<ul class="hotlist">
	  				[#list debaterank as item]
					    <li>
					    	<span [#if (item_index < 3)] class="normalspan ranknum" [#else] class="normalspan"[/#if]>${(item_index + 1)}</span>
		  					<div class="rankright">
		  						<a href="${base}/debate/${item.oid?c}" title="${item.title}" class="arttile" target="_blank">[@f.TrimSubstring content="${item.title}" mylength=16 /]</a>
		  					</div>
					    </li>
				    [/#list]
	  			</ul>
	  		</div>
		</div>
	</div>
</div>
	<div class="clear"></div>
	<br>
	<br>

	<script>
		$(function () {
			hoverBind();
		})
		function hoverBind(){
			$(".main01").hover(
				function () {
					$(this).find(".yc").css("top","0px")
				 },
				function () {
				     $(this).find(".yc").css("top","128px")
				}
			)
		}
	</script>
</body>
</html>
