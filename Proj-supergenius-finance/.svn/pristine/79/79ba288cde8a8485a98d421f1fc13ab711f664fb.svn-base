package com.supergenius.web.finance.controller;

import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.genius.server.base.controller.BaseController;
import com.supergenius.global.conf.SysConf;
import com.supergenius.server.common.constants.ViewKeyDict;
import com.supergenius.web.finance.helper.IndexHelper;
import com.supergenius.xo.finance.entity.Article;
import com.supergenius.xo.user.entity.User;
import com.supergenius.xo.user.service.UserSO;

@Controller
public class UHomeController extends BaseController {
	
	@Autowired
	private UserSO userso;
	
	@RequestMapping(value = {"/uhome/{uid:.{32}}"}, method = RequestMethod.GET)
	public String index(Map<String, Object> model, @PathVariable String uid, HttpServletRequest request) {
		
		List<Article> list = IndexHelper.getArticleList(uid, 1, SysConf.HisArticleSize);
		int Articlecount = list.size();
		User user =userso.get(uid);
		List<Article> hisHotArticle = IndexHelper.gethisHotArticle(uid);
		model.put(ViewKeyDict.hotarticles, hisHotArticle);
		model.put(ViewKeyDict.user, user);
		model.put(ViewKeyDict.count, Articlecount);
		model.put(ViewKeyDict.list,list);
		return "uhome";
	}
	
	/**
	 * 他的文章更多
	 * 
	 * @param model
	 * @param pagenum
	 * @param request
	 * @return
	 * @author 
	 * @dete 
	 */
	
	@RequestMapping(value = "/ajax/his/article/{uid:.{32}}", method = RequestMethod.GET)
	public String ajax_msg(Map<String, Object> model, @PathVariable String uid, int pagenum, HttpServletRequest request) {
		List<Article> list  = IndexHelper.getArticleList(uid, pagenum, SysConf.HisArticleSize);
		model.put(ViewKeyDict.list, list);
		return "ajaxarticle";
	
	}
}
