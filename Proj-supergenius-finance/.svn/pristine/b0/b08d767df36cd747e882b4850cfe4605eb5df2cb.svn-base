            } else {
            	$("#searchform").submit();
            }
		}
		
		//按enter键查找
		function searchHandle(event){
			if (event.keyCode==13) {
				if ($(this).val().trim() == "") {
					shakeHandle();
					$(this).blur();
					return;
				} else {
					$("#searchform").submit();			
				}
			}
		}
		
		function searchlistStyleHide() {
			$(".searchlist").hide();
		}
		//设置搜索框内容为空时抖动提示
		function shakeHandle() {
			$('#txtsearch').addClass("txtsearch");
			setTimeout("$('#txtsearch').removeClass('txtsearch')",400);
		}
		
