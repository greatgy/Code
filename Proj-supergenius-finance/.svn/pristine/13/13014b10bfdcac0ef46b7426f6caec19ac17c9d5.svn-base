package com.supergenius.web.finance.api;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.genius.core.base.annotation.Json;
import com.genius.core.base.utils.JsonUtil;
import com.genius.core.base.utils.StrUtil;
import com.genius.model.base.entity.Pager;
import com.genius.model.base.enums.EStatus;
import com.genius.server.base.controller.BaseController;
import com.supergenius.global.conf.WebConf;
import com.supergenius.server.common.constants.ViewKeyDict;
import com.supergenius.server.user.helper.BaseUserHP;
import com.supergenius.web.finance.helper.FinanceHP;
import com.supergenius.xo.finance.entity.Contribute;
import com.supergenius.xo.finance.enums.EContributeState;
import com.supergenius.xo.finance.service.ContributeSO;
import com.supergenius.xo.user.entity.User;

/**
 * 我的文章Controller
 * 
 * @author YangGuang
 * @date
 */
@Controller
public class MyArticleInterface extends BaseController {

	@Autowired
	private ContributeSO so;

	private static Logger log = LoggerFactory.getLogger(MyArticleInterface.class);

	/**
	 * 我的文章
	 * 
	 * @param model
	 * @param request
	 * @return
	 * @author YangGuang
	 */
	@RequestMapping(value = { "/api/user/{uid:.{32}}/articles" }, method = RequestMethod.GET)
	@ResponseBody
	private String my_article(HttpServletRequest request, @PathVariable String uid) {
		Map<String, Object> myArticle = new HashMap<String, Object>();
		Map<String, Object> articles = new HashMap<String, Object>();
		int pageNum = Integer.valueOf((request.getParameter("num") == null || request.getParameter("num").length() == 0) ? "1" : request.getParameter("num"));
		if (StrUtil.isNotEmpty(uid)) {
			User user = BaseUserHP.get(uid);
			if (user != null) {
				List<Contribute> rejectedContribute = so.getList(user.getUid(), EContributeState.refuse, Pager.getNewInstance(pageNum, WebConf.MyArticlePageSize));
				List<Contribute> approvingContribute = so.getList(user.getUid(), EContributeState.init, Pager.getNewInstance(pageNum, WebConf.MyArticlePageSize));
				List<Contribute> publishedContribute = so.getList(user.getUid(), EContributeState.accept, Pager.getNewInstance(pageNum, WebConf.MyArticlePageSize));
				articles.put(ViewKeyDict.published, FinanceHP.getEContributeStateFinances(publishedContribute, EStatus.enable));
				articles.put(ViewKeyDict.approving, approvingContribute);
				articles.put(ViewKeyDict.rejected, rejectedContribute);
				myArticle.put(ViewKeyDict.articles, articles);
				return JsonUtil.toJson(myArticle, Json.webStrategy);
			}
			log.info("user info is null");
		}
		return null;
	}

	/**
	 * 根据用户和类型获取文章
	 * 
	 * @param type
	 * @param uid
	 * @return
	 * @author yangguang
	 * @createtime 2017年5月5日上午午9:52:38
	 * @return
	 */
	@RequestMapping(value = { "/api/user/{uid:.{32}}/{type:[a-z]+}/articles" }, method = RequestMethod.GET)
	@ResponseBody
	private String myArticlesByType(HttpServletRequest request, @PathVariable String uid, @PathVariable String type) {
		Map<String, Object> articles = new HashMap<String, Object>();
		int pageNum = Integer.valueOf((request.getParameter("num") == null || request.getParameter("num").length() == 0) ? "1" : request.getParameter("num"));
		if (StrUtil.isNotEmpty(uid)) {
			User user = BaseUserHP.get(uid);
			if (user != null) {
				List<Contribute> contribute = so.getList(user.getUid(), EContributeState.getByName(type), Pager.getNewInstance(pageNum, WebConf.MyArticlePageSize));
				if (EContributeState.getByName(type) == EContributeState.accept) {
					articles.put(ViewKeyDict.list, FinanceHP.getEContributeStateFinances(contribute, EStatus.enable));
				} else {
					articles.put(ViewKeyDict.list, contribute);
				}
				return JsonUtil.toJson(articles, Json.webStrategy);
			}
			log.info("user info is null");
		}
		return null;
	}
}
