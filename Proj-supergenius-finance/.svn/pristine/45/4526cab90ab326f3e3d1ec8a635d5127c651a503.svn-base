.hd {
    display: none;
}

.header_tou .top{
    position: fixed;
    top: 0;
    z-index: 10001;
    width:100%; 
    height:37px; 
    background-color:#4e4d4d;
}
.header_tou .top .top_main1 {
    width:1100px;
}
.header_tou .top .top_left {
    list-style:none;
    float:left;
}
.header_tou .top .top_left li {
    float:left;
}
.header_tou .top .top_left li a {
    font-size:12px; 
    color:#b8b8b8; 
    display:block; 
    margin:10px 6px;
}
.header_tou .top .top_left li a:hover {
    color:#fff;
}
.top .top_left .tl_act {
    color:#FFF!important;
}
.top .top_right {
    list-style:none; 
    float:right;
}
.top_right li {
    float:left;
}
.top_right li a {
    font-size:12px; 
    color:#ccc; 
    display:block; 
    margin:10px 10px;
}
.top_right .tr_act {
    width:55px; 
    height:37px; 
    background-color:#d93126;
}
.top_right li a:hover { 
    color: #fff;
}
.top_right .welcome a:hover .headerName {
    color: #fff;
}
.top_right li .newsnum {
    position: relative;
    display: inline-block;
}
.top_right li .newsnum:hover {
    text-decoration: underline;
}
.newsnotice .number {
    color: red;
}
.newsnum .rdot {
    display: block;
    width: 6px;
    height: 6px;
    background: red;
    border-radius: 50%;
    position: absolute;
    top: 0;
    right: -4px;
    overflow: hidden;
}
.newsnotice .newsection {
    position: absolute;
    background: #fff;
    z-index: 1000;
    width: 235px;
    margin-top: 15px;
    margin-left: -75px;
    border: 1px solid #E2E2E2;
    display:none;
}
.newsection .trangle {
    height: 24px;
    margin-left: 58%;
    position: absolute;
    display: block;
    top: -23px;
}
.trangle em , .trangle i {
    width: 0;
    height: 0;
    font-size: 0;
    line-height: 0;
    display: block;
    position: absolute;
    border: 12px solid transparent;
    border-style: dashed dashed solid dashed;
}
.trangle em {
    border-bottom-color: #CACACA;
    top: -1px;
}
.trangle i {
    border-bottom-color: #fff;
    top: 0;
}
.newsection .msglist {
    background: #fff;
}
.newsection .msglist li {
    height: 40px;
    text-align: left;
    width: 215px;
    line-height: 40px;
    padding: 0 10px;
    border-bottom: 1px solid #ddd;
    color: #535353;
    overflow: hidden;
}
.newsection .msglist li:last-child {
    border-bottom: none;
}
.msglist li a {
    display: inline-block;
    margin: 0;
    color: #535353;
}
.msglist li .del {
    display: inline-block;
    width: 20px;
    height: 20px;
    overflow: hidden;
    text-align: center;
    line-height: 20px;
    float: right;
    margin-top: 10px;
}
.msglist .del img {
    width: 20px;
    height: 20px;
    overflow: hidden;
}
.newsection .msglist li:hover {
    background: #F1F1F1;
}
.newsection .msglist li:hover a {
    color: #A6A6A6;
}
.msglist pre {
    color: #535353;
    font-size: 12px;
    text-align: left;
    padding: 10px;
    font-family: "Microsoft Yahei";
    white-space: normal;
    overflow: hidden;
}
.msglist pre p {
    line-height: 20px;
    margin-bottom: 5px;
}
.msglist pre .authorname {
    display: block;
    text-align: right;
}
.msglist .nonews {
    font-size: 12px;
    color: #AEAEAE;
    margin-bottom: 10px;
}

.top_left .firstnavlist {
    position: absolute;
    z-index: 1000;
    text-align: center;
    width: 102px;
    display: none;
}
.firstnavlist .trangle {
    width: 0px;
    height: 0px;
    border-style: solid;
    border-width: 0px 10px 12px 10px;
    border-color: transparent transparent #DB5656 transparent;
}
.firstnavlist .navlink {
    display: block;
    float: left;
    background-color: #DB3E3E;
}
.header_tou .top .navlink li {
    float: none;
}
.top_left .firstnavlist .navlink li a {
    color: #fff;
}
.header_tou .top .top_left .selectlink:hover .firstnavlist {
    display: block;
}
.header_tou .top .top_right .newsnotice:hover .newsection {
    display: block;
}