 [#--
 * BroadcastTemplate
 * 轮播宏
 * @author 商建国
 --]
 [#macro BroadcastTemplate]
 <script type="text/ejs" id="broadcast-template">
    <div class="broadcast">
        <a class="broadcast-center" href="<%= this.hots[0].link %>" target="_blank"><img src="<%= this.hots[0].img %>" /></a>
        <a class="broadcast-previous" href="javascript:void(0);"><img src="<%= g.baseimg %>/imgs/default/index_prev_btn.png"></a>
        <a class="broadcast-next" href="javascript:void(0);"><img src="<%= g.baseimg %>/imgs/default/index_next_btn.png"></a>
        <div class="broadcast-titlecover"></div>
        <div class="broadcast-link">
            <a href="<%= this.hots[0].link %>" target="_blank" title="<%= this.hots[0].title %>"><%= $.ellipsisText(this.hots[0].title, 23) %></a>
        </div>
        <div class='broadcast-bottom'>
            <% for(var i = 0; i < this.hotsCount; i++) { %>
                <% var hot = this.hots[i] ? this.hots[i] : {link: '', img: '', title: '无'} %>
                <div index='<%= i %>'>
                    <a href="<%= hot.link %>" target="_blank">
                        <img src="<%= hot.img %>"/>
                        <p class="broadcast-cover"><span title="<%= hot.title %>"><%= $.ellipsisText(hot.title, 17) %></span></p>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</script>
[/#macro]
