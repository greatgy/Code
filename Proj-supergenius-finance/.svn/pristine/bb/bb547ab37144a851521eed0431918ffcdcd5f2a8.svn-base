package com.supergenius.global.conf;

import java.util.Properties;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;

import com.genius.core.base.conf.BaseWebConf;
import com.genius.core.base.utils.GlobalUtil;

/**
 * @author Architect.bian
 * 
 */
@Component
public class WebConf extends BaseWebConf {

	public static String defaultMark = "";
	public static String defaultavatar = "";
	public static String defaultavatartiny = "";
	public static String pageSplitter = GlobalUtil.getUUID();//防止在没配置的情况下将所有的字符分割，uid则不会分割
	public static int UsersPageSize;
	public static int FinancePageSize;
	public static int FinanceTopSize;
	public static int IndexFinanceTopSize;
	public static int IndexFinanceLatestSize;
	public static String DefaultAnonymousName;
	public static int FinanceRankClickDay;
	public static int FinanceRankPublishDay;
	public static int FinanceRankListNum;
	public static int MyArticlePageSize;
	public static int MyTopicPageSize;
	public static int TopicPageSize;
	public static int TopicIndexRotateSize;
	public static int DebatePageSize;
	public static int TopicCommentPageSize;
	public static int DebatePageLoadMoreSize;
	public static String LoginURL;
	public static String SnsRootPath;

	@Value("#{web}")
	public void setWebConf(Properties prop) {
		WebConf.defaultMark = prop.getProperty("defaultMark");
		WebConf.defaultavatar = prop.getProperty("defaultavatar");
		WebConf.defaultavatartiny = prop.getProperty("defaultavatartiny");
		WebConf.UsersPageSize = Integer.valueOf(prop.getProperty("UsersPageSize"));
		WebConf.FinancePageSize = Integer.valueOf(prop.getProperty("FinancePageSize"));
		WebConf.FinanceTopSize = Integer.valueOf(prop.getProperty("FinanceTopSize"));
		WebConf.IndexFinanceTopSize = Integer.valueOf(prop.getProperty("IndexFinanceTopSize"));
		WebConf.IndexFinanceLatestSize = Integer.valueOf(prop.getProperty("IndexFinanceLatestSize"));
		WebConf.DefaultAnonymousName = prop.getProperty("DefaultAnonymousName");
		WebConf.MyArticlePageSize = Integer.parseInt(prop.getProperty("MyArticlePageSize"));
		WebConf.MyTopicPageSize = Integer.parseInt(prop.getProperty("MyTopicPageSize"));
		WebConf.TopicPageSize = Integer.parseInt(prop.getProperty("TopicPageSize"));
		WebConf.TopicIndexRotateSize = Integer.parseInt(prop.getProperty("TopicIndexRotateSize"));
		WebConf.DebatePageSize = Integer.parseInt(prop.getProperty("DebatePageSize"));
		WebConf.TopicCommentPageSize = Integer.parseInt(prop.getProperty("TopicCommentPageSize"));
		WebConf.DebatePageLoadMoreSize = Integer.parseInt(prop.getProperty("DebatePageLoadMoreSize"));
		WebConf.LoginURL = prop.getProperty("LoginURL");
		WebConf.SnsRootPath = prop.getProperty("SnsRootPath");
		WebConf.pageSplitter = prop.getProperty("pageSplitter");
	}
}


