			channel: ""
		}
		
		var commentdefault = {
			maxlength: 300
		}
		
		var me = {
			showname: "${me.showname!"游客"}",
			imglittle: "${me.avatar}",
			oid:"${me.oid}",
			defaultImg: "${baseimg}/imgs/web/noavatar.png"
		}
		
		function beforeSubmitHandler(obj){
			params = {};
			params.fromuid = '${bean.uid}';
			params.channel = "topic";
			params.content = $(obj).siblings(".comment_textarea").val();
			var touid = $(obj).parent().parent().parent().data("uid");
			if(typeof touid != "undefined"){
				params.touid = touid;
				params.touseruid = $(obj).parent().parent().parent().data("touseruid");
			}
			var topuid = $(obj).parent().parent().parent().data("topuid");
			if(typeof topuid != "undefined"){
				params.topuid = topuid;
			}
			var fromusername = $("input[name='fromusername']").val();
            if(fromusername != ""){
                params.fromusername = fromusername;
            }
		}
		
		function afterSubmitHandler(result, obj){
			if(result.success){
				$(".comment_textarea").val("");
				addComment(result, obj);
				$(".reply_title").html("");
				registerPraise();
			}else{
				alert("添加失败");
			}
		}
		
		function submitCommentHandler(obj){
			beforeSubmitHandler(obj);
			if(params.content == ""){
				alert("评论内容不能为空");
				return;
			}
			if(params.content.length >= commentdefault.maxlength){
				alert("评论内容最多" + commentdefault.maxlength +　"个字");
				return;
			}
			$.post("${base}/ajax/comment/{0}_{1}".format(params.channel, params.fromuid), params,function(data){
				afterSubmitHandler(data, obj);
			});
		}
		function reply(obj){
			if($(".comment_textarea").val() != '') {
				if(!confirm("您确定要放弃现在的评论吗？")){
					return;
				}else{
					$(".comment_textarea").val('');
				}
			}
			var replytxt = "回复&nbsp;<span class='reply_name' style='margin-right:0;'>" + $(obj).data("toname") + "</span>：";
			$(".reply_title").html(replytxt).removeClass("hd");
			window.location.hash = "reply_form";
			$(".comment_textarea").focus();
			
		}
		function addComment(result, obj){
			var html = "";
			html += '<div class="com_list com_list_right">';
			html += '<a href=""><img width="45px" height="45px" class="right"';
			if(me.imglittle.trim() != ""){
				html += 'src="${baseimg}' + me.imglittle + '">';
			}else{
				html += 'src="' + me.defaultImg + '" />';
			} 
			html += '</a><div class="com_info right" >';
			html += '<h3><a href="">' + result.bean.fromusername + '</a>&nbsp;&nbsp;刚刚</h3>';
			html += '<p class="com_con">' + result.bean.content +'</p>'
			html += '<p class="com_reply">';
			html += '<span class="reply"><a href="javascript:void(0)" id="btnprizecomments_${(me.oid)!"0"}_'+result.bean.uid+'" data-counter=".prizecounter">'
				 + '<img src="${baseimg}/imgs/default/heart_02.png" /><span class="prizecounter">(0)</span></a></span>';
			html += '<a href="javascript:void(0);" onclick="reply(this);" data-toname="' + result.bean.fromusername +'">回复</a>';
			html += '</p></div><div class="clear"></div></div>';
			if($("#list_one_1 .com_list").length == 0){
				$(".db_add").after(html);
			}else{
				$("#list_one_1 .com_list").last().after(html);
			}
			$("#list_one_1 .nothing").addClass("hd");
		}
	</script>
